---
import { getCollection } from 'astro:content';

// 1. Fetch Data
const posts = await getCollection('posts');
const categories = [...new Set(posts.map(post => post.data.category))].filter(Boolean);

// 2. OPTIMIZED Serialization (Removed 'content' to prevent HTML bloat)
// Search will now scan Title, Description, Tags, and Keywords only.
const serializedPosts = posts.map(post => ({
  slug: post.slug,
  title: post.data.title,
  category: post.data.category || 'Uncategorized',
  tags: post.data.tags || [],
  keywords: post.data.keywords || [],
  date: post.data.date,
  description: post.data.description || ''
}));

// 3. Get Top Story
const topStory = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())[0];

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/category/politics', text: 'Politics' },
  { href: '/category/business', text: 'Business' },
  { href: '/category/sports', text: 'Sports' },
  { href: '/about', text: 'About' },
];
---

<header class="site-header" id="site-header">
  
  {/* --- TOP NEWS TICKER --- */}
  <div class="ticker-wrap">
    <div class="ticker-label">
      <span class="pulse-dot"></span> BREAKING
    </div>
    <div class="ticker-content">
      {topStory ? (
        <a href={`/posts/${topStory.slug}`} class="ticker-link">
          <span class="ticker-time">{new Date(topStory.data.date).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}:</span>
          {topStory.data.title}
        </a>
      ) : (
         <span>Welcome to The Mwaniki Report. Stay tuned for updates.</span>
      )}
    </div>
  </div>

  <div class="header-main">
    <div class="header-inner">
      
      {/* 1. Mobile Hamburger (Hidden on Desktop) */}
      <button class="menu-toggle" id="menu-toggle" aria-label="Open Menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      {/* 2. BRAND LOGO & TITLE (Now Fully Clickable) */}
      <a href="/" class="brand-link" aria-label="Go to Homepage">
        <img src="/Jonathan-Mwaniki-logo.png" alt="JM Logo" class="logo-img" />
        <div class="brand-text">
          <h1 class="brand-title">The <span class="highlight">Mwaniki</span> Report</h1>
          <span class="brand-tagline">Kenya's Premier News Source</span>
        </div>
      </a>

      {/* 3. Desktop Navigation (Visible on Large Screens) */}
      <nav class="desktop-nav">
        {navItems.map(item => (
          <a href={item.href} class="d-nav-link">{item.text}</a>
        ))}
      </nav>

      {/* 4. Search Icon */}
      <button class="search-toggle" id="search-toggle" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </button>

    </div>
  </div>

  {/* --- MOBILE DRAWER (Slide Out) --- */}
  <div class="mobile-drawer" id="mobile-drawer">
    <div class="drawer-header">
      <span class="drawer-title">Menu</span>
      <button id="close-menu" aria-label="Close Menu">&times;</button>
    </div>
    <nav class="mobile-nav-list">
      {navItems.map(item => (
        <a href={item.href} class="m-nav-link">{item.text}</a>
      ))}
      <div class="drawer-divider"></div>
      <span class="drawer-subtitle">Categories</span>
      {categories.map(cat => (
        <a href={`/category/${cat.toLowerCase()}`} class="m-nav-sublink">{cat}</a>
      ))}
    </nav>
  </div>
  <div class="overlay" id="site-overlay"></div>

  {/* --- SEARCH OVERLAY --- */}
  <div class="search-modal" id="search-modal">
    <div class="search-box">
      <div class="search-header">
        <input type="text" id="search-input" placeholder="Search news, politics, sports..." autocomplete="off" />
        <button id="close-search">Esc</button>
      </div>
      <div id="search-results" class="search-results"></div>
    </div>
  </div>

</header>

<style>
  :root {
    --primary: #dc2626; /* Kenyan Red */
    --primary-dark: #b91c1c;
    --dark: #111827;
    --light: #f3f4f6;
    --white: #ffffff;
    --border: #e5e7eb;
    --font-serif: 'Georgia', serif;
    --font-sans: system-ui, -apple-system, sans-serif;
  }

  /* --- 1. TICKER --- */
  .ticker-wrap {
    background: var(--dark);
    color: white;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
    height: 32px;
    overflow: hidden;
  }
  .ticker-label {
    background: var(--primary);
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    font-weight: 800;
    letter-spacing: 0.05em;
    z-index: 2;
    font-family: var(--font-sans);
  }
  .pulse-dot {
    width: 6px; height: 6px; background: white; border-radius: 50%;
    margin-right: 6px; animation: pulse 1.5s infinite;
  }
  @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.4; } 100% { opacity: 1; } }
  
  .ticker-content {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    padding-left: 1rem;
  }
  .ticker-link {
    display: inline-block;
    color: #e5e7eb;
    text-decoration: none;
    animation: marquee 20s linear infinite;
    font-family: var(--font-sans);
  }
  .ticker-link:hover { text-decoration: underline; animation-play-state: paused; }
  .ticker-time { color: var(--primary); font-weight: bold; margin-right: 5px; }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  /* --- 2. HEADER MAIN --- */
  .site-header {
    position: sticky; top: 0; z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--border);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }
  
  .header-inner {
    max-width: 1280px; margin: 0 auto;
    height: 70px;
    display: flex; align-items: center; justify-content: space-between;
    padding: 0 1rem;
  }

  /* BRAND (LOGO + TITLE CLICKABLE) */
  .brand-link {
    display: flex; 
    align-items: center; 
    gap: 0.75rem; 
    text-decoration: none; 
    color: var(--dark);
    cursor: pointer;
  }
  .brand-link:hover .brand-title { color: var(--primary); transition: color 0.2s; }
  
  .logo-img { height: 45px; width: auto; display: block; }
  
  .brand-text { display: flex; flex-direction: column; line-height: 1.1; }
  .brand-title { font-family: var(--font-serif); font-weight: 800; font-size: 1.25rem; letter-spacing: -0.5px; margin: 0; }
  .highlight { color: var(--primary); }
  .brand-tagline { font-family: var(--font-sans); font-size: 0.7rem; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px; }

  /* DESKTOP NAV */
  .desktop-nav { display: none; gap: 1.5rem; }
  .d-nav-link {
    font-family: var(--font-sans); font-weight: 600; font-size: 0.95rem;
    color: var(--dark); text-decoration: none;
    padding: 0.5rem 0; border-bottom: 2px solid transparent;
    transition: all 0.2s;
  }
  .d-nav-link:hover, .d-nav-link.active { color: var(--primary); border-bottom-color: var(--primary); }

  /* CONTROLS */
  .menu-toggle, .search-toggle {
    background: none; border: none; cursor: pointer; padding: 0.5rem;
    color: var(--dark); border-radius: 50%; transition: background 0.2s;
  }
  .menu-toggle:hover, .search-toggle:hover { background: var(--light); color: var(--primary); }
  
  /* --- 3. MOBILE DRAWER --- */
  .mobile-drawer {
    position: fixed; top: 0; left: 0; bottom: 0; width: 280px;
    background: white; z-index: 1002;
    transform: translateX(-100%); transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 2px 0 10px rgba(0,0,0,0.1);
  }
  .mobile-drawer.active { transform: translateX(0); }
  
  .drawer-header {
    height: 60px; display: flex; align-items: center; justify-content: space-between;
    padding: 0 1.5rem; border-bottom: 1px solid var(--border);
    background: var(--dark); color: white;
  }
  .drawer-title { font-weight: 700; text-transform: uppercase; letter-spacing: 1px; }
  #close-menu { background: none; border: none; color: white; font-size: 1.5rem; cursor: pointer; }

  .mobile-nav-list { padding: 1.5rem; display: flex; flex-direction: column; gap: 0.5rem; overflow-y: auto; height: calc(100% - 60px); }
  .m-nav-link { font-size: 1.1rem; font-weight: 700; color: var(--dark); padding: 0.5rem 0; text-decoration: none; border-bottom: 1px solid var(--light); }
  .m-nav-sublink { font-size: 0.95rem; color: #555; padding: 0.4rem 0 0.4rem 1rem; text-decoration: none; border-left: 2px solid var(--light); }
  .m-nav-sublink:hover { border-left-color: var(--primary); color: var(--primary); }
  .drawer-divider { height: 1px; background: var(--border); margin: 1rem 0; }
  .drawer-subtitle { font-size: 0.8rem; text-transform: uppercase; color: #888; margin-bottom: 0.5rem; font-weight: 700; }

  .overlay {
    position: fixed; inset: 0; background: rgba(0,0,0,0.5); z-index: 1001;
    opacity: 0; visibility: hidden; transition: opacity 0.3s;
    backdrop-filter: blur(2px);
  }
  .overlay.active { opacity: 1; visibility: visible; }

  /* --- 4. SEARCH MODAL --- */
  .search-modal {
    position: fixed; inset: 0; z-index: 1003;
    background: rgba(255,255,255,0.98);
    display: none; align-items: flex-start; justify-content: center;
    padding-top: 100px;
  }
  .search-modal.active { display: flex; }
  
  .search-box { width: 100%; max-width: 700px; padding: 0 1rem; }
  .search-header { display: flex; align-items: center; border-bottom: 2px solid var(--dark); padding-bottom: 0.5rem; }
  #search-input {
    width: 100%; border: none; background: transparent;
    font-size: 1.5rem; outline: none; font-weight: bold;
    color: var(--dark);
  }
  #close-search { background: var(--light); border: none; padding: 0.2rem 0.5rem; border-radius: 4px; font-size: 0.8rem; cursor: pointer; color: #666; }
  
  .search-results { margin-top: 1.5rem; max-height: 60vh; overflow-y: auto; }
  .result-item { padding: 1rem; border-bottom: 1px solid var(--border); transition: background 0.1s; }
  .result-item:hover { background: var(--light); }
  .result-title { font-weight: 700; color: var(--dark); font-size: 1.1rem; margin-bottom: 0.2rem; }
  .result-meta { font-size: 0.8rem; color: #666; }

  /* RESPONSIVE */
  @media (min-width: 900px) {
    .menu-toggle { display: none; }
    .desktop-nav { display: flex; }
  }
  
  @media (max-width: 480px) {
      .logo-img { height: 35px; }
      .brand-title { font-size: 1rem; }
      .brand-tagline { font-size: 0.6rem; }
      .ticker-wrap { font-size: 0.65rem; }
  }
</style>

<script is:inline define:vars={{posts: serializedPosts}}>
  // === 1. Navigation Logic ===
  const menuBtn = document.getElementById('menu-toggle');
  const drawer = document.getElementById('mobile-drawer');
  const overlay = document.getElementById('site-overlay');
  const closeMenuBtn = document.getElementById('close-menu');

  function toggleMenu(show) {
    if(show) {
      drawer.classList.add('active');
      overlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    } else {
      drawer.classList.remove('active');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  menuBtn?.addEventListener('click', () => toggleMenu(true));
  closeMenuBtn?.addEventListener('click', () => toggleMenu(false));
  overlay?.addEventListener('click', () => {
    toggleMenu(false);
    toggleSearch(false);
  });

  // === 2. Search Logic ===
  const searchBtn = document.getElementById('search-toggle');
  const searchModal = document.getElementById('search-modal');
  const closeSearchBtn = document.getElementById('close-search');
  const searchInput = document.getElementById('search-input');
  const searchResults = document.getElementById('search-results');

  function toggleSearch(show) {
    if(show) {
      searchModal.classList.add('active');
      setTimeout(() => searchInput.focus(), 100);
      document.body.style.overflow = 'hidden';
    } else {
      searchModal.classList.remove('active');
      document.body.style.overflow = '';
      searchInput.value = ''; // Reset
      searchResults.innerHTML = '';
    }
  }

  searchBtn?.addEventListener('click', () => toggleSearch(true));
  closeSearchBtn?.addEventListener('click', () => toggleSearch(false));
  
  // Close on ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      toggleMenu(false);
      toggleSearch(false);
    }
  });

  // === 3. Search Algorithm (Optimized) ===
  searchInput?.addEventListener('input', (e) => {
    const query = e.target.value.toLowerCase().trim();
    searchResults.innerHTML = '';

    if (query.length < 2) return;

    // Filter Posts
    const hits = posts.filter(post => {
      return post.title.toLowerCase().includes(query) ||
             post.tags.some(tag => tag.toLowerCase().includes(query));
    }).slice(0, 5); // Limit to 5 results

    if(hits.length === 0) {
      searchResults.innerHTML = '<div style="color:#666; padding:1rem;">No results found.</div>';
    } else {
      hits.forEach(hit => {
        const item = document.createElement('a');
        item.href = `/posts/${hit.slug}`;
        item.className = 'result-item';
        item.style.display = 'block';
        item.style.textDecoration = 'none';
        item.innerHTML = `
          <div class="result-title">${hit.title}</div>
          <div class="result-meta">
             <span style="color:#dc2626; font-weight:bold;">${hit.category}</span> â€¢ 
             ${new Date(hit.date).toLocaleDateString()}
          </div>
        `;
        searchResults.appendChild(item);
      });
    }
  });

  // === 4. Active Link Highlighting ===
  const currentPath = window.location.pathname;
  document.querySelectorAll('.d-nav-link').forEach(link => {
    if(link.getAttribute('href') === currentPath || (currentPath.includes(link.getAttribute('href')) && link.getAttribute('href') !== '/')) {
      link.classList.add('active');
    }
  });
</script>