---
import { getCollection } from 'astro:content';

// 1. Fetch Data
const posts = await getCollection('posts');
const categories = [...new Set(posts.map(post => post.data.category))].filter(Boolean);

// 2. Search Index (Optimized + Added Images)
const serializedPosts = posts.map(post => ({
  slug: post.slug,
  title: post.data.title,
  category: post.data.category || 'Uncategorized',
  image: post.data.image || '/default-image.jpg', // Added Image for Search UI
  tags: post.data.tags || [],
  date: post.data.date,
  description: post.data.description || ''
}));

// 3. Get Top Story
const topStory = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())[0];

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/category/politics', text: 'Politics' },
  { href: '/category/business', text: 'Business' },
  { href: '/category/sports', text: 'Sports' },
  { href: '/about', text: 'About' },
];
---

<header class="site-header" id="site-header">

  {/* --- TOP STORY TICKER --- */}
  <div class="ticker-wrap">
    <div class="ticker-label">
      <span class="pulse-dot"></span> BREAKING
    </div>
    <div class="ticker-content">
      {topStory ? (
        <a href={`/posts/${topStory.slug}`} class="ticker-link">
          <span class="ticker-time">{new Date(topStory.data.date).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}:</span>
          <strong class="ticker-head">{topStory.data.title}</strong>
          {topStory.data.description && (
             <span class="ticker-desc"> â€” {topStory.data.description.substring(0, 100)}...</span>
          )}
        </a>
      ) : (
         <span>Welcome to The Mwaniki Report.</span>
      )}
    </div>
  </div>

  <div class="header-main">
    <div class="header-inner">

      {/* 1. Mobile Hamburger Button */}
      <button class="menu-toggle" id="menu-toggle" aria-label="Open Menu">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      {/* 2. BRAND LOGO & TITLE */}
      <a href="/" class="brand-link" aria-label="Go to Homepage">
        <img src="/Jonathan-Mwaniki-logo.png" alt="JM Logo" class="logo-img" />
        <div class="brand-text">
          <h1 class="brand-title">The <span class="highlight">Mwaniki</span> Report</h1>
          <span class="brand-tagline">Kenya's Premier News Source</span>
        </div>
      </a>

      {/* 3. Desktop Navigation */}
      <nav class="desktop-nav">
        {navItems.map(item => (
          <a href={item.href} class="d-nav-link">{item.text}</a>
        ))}
      </nav>

      {/* 4. Search Icon */}
      <button class="search-toggle" id="search-toggle" aria-label="Search">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </button>

    </div>
  </div>

  {/* --- MOBILE DRAWER (HAMBURGER MENU) --- */}
  <div class="mobile-drawer" id="mobile-drawer">
    <div class="drawer-header">
      <span class="drawer-title">Menu</span>
      <button id="close-menu" aria-label="Close Menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
      </button>
    </div>
    <div class="drawer-content">
      <nav class="mobile-nav-list">
        {navItems.map(item => (
          <a href={item.href} class="m-nav-link">{item.text}</a>
        ))}
        <div class="drawer-divider"></div>
        <span class="drawer-subtitle">Categories</span>
        <div class="mobile-cat-grid">
          {categories.map(cat => (
            <a href={`/category/${cat.toLowerCase()}`} class="m-cat-pill">{cat}</a>
          ))}
        </div>
      </nav>
    </div>
  </div>

  {/* Dark Overlay for Menu/Search */}
  <div class="overlay" id="site-overlay"></div>

  {/* --- SEARCH OVERLAY (Improved UI) --- */}
  <div class="search-modal" id="search-modal">
    <div class="search-container">
      
      {/* Search Header */}
      <div class="search-bar-wrapper">
         <svg class="search-icon-input" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
         <input type="text" id="search-input" placeholder="Search stories, people, or events..." autocomplete="off" />
         <button id="close-search" class="close-search-btn">Esc</button>
      </div>

      <div class="search-body">
        
        {/* Default View (Visible when no search term) */}
        <div id="search-default" class="search-default">
           <h3 class="search-label">Trending Topics</h3>
           <div class="trending-tags">
              {categories.slice(0, 6).map(cat => (
                 <a href={`/category/${cat.toLowerCase()}`} class="trend-tag">#{cat}</a>
              ))}
           </div>
        </div>

        {/* Results View */}
        <div id="search-results" class="search-results hidden">
          {/* Results injected via JS */}
        </div>

      </div>
    </div>
  </div>

</header>

<style>
  :root {
    --primary: #dc2626; 
    --primary-dark: #b91c1c;
    --bg-header: rgba(255, 255, 255, 0.98);
    --text-main: #1a1a1a; 
    --text-muted: #6b7280;
    --border: #e5e7eb;
    --drawer-bg: #ffffff;
    --font-serif: 'Georgia', serif;
    --font-sans: system-ui, -apple-system, sans-serif;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg-header: rgba(17, 24, 39, 0.98);
      --text-main: #ffffff;
      --text-muted: #9ca3af;
      --border: #374151;
      --drawer-bg: #1f2937;
    }
  }

  /* --- 1. TICKER STYLES --- */
  .ticker-wrap {
    background: #000;
    color: white;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    height: 40px;
    overflow: hidden;
    position: relative;
    z-index: 1002;
    border-bottom: 1px solid #333;
  }
  .ticker-label {
    background: var(--primary);
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    font-weight: 800;
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.05em;
    z-index: 2;
    font-family: var(--font-sans);
    flex-shrink: 0;
  }
  .pulse-dot {
    width: 6px; height: 6px; background: white; border-radius: 50%;
    margin-right: 8px; animation: pulse 1.5s infinite;
  }
  @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.4; } 100% { opacity: 1; } }

  .ticker-content {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    padding-left: 1rem;
    mask-image: linear-gradient(to right, transparent, black 20px, black 95%, transparent);
  }
  .ticker-link {
    display: inline-block;
    color: #e5e7eb;
    text-decoration: none;
    animation: marquee 30s linear infinite;
    font-family: var(--font-sans);
    display: flex;
    align-items: center;
  }
  .ticker-link:hover { text-decoration: none; animation-play-state: paused; }
  .ticker-time { color: var(--primary); font-weight: bold; margin-right: 10px; font-size: 0.75rem; }
  .ticker-head { font-weight: 700; color: white; margin-right: 8px; }
  .ticker-desc { color: #9ca3af; font-weight: 400; font-style: italic; }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  /* --- 2. HEADER MAIN --- */
  .site-header { position: sticky; top: 0; z-index: 1000; width: 100%; }
  .header-main {
    background: var(--bg-header);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }
  .header-inner {
    max-width: 1280px; margin: 0 auto;
    height: 72px;
    display: flex; align-items: center; justify-content: space-between;
    padding: 0 1.5rem;
  }

  /* BRAND */
  .brand-link { display: flex; align-items: center; gap: 0.75rem; text-decoration: none; }
  .logo-img { height: 48px; width: auto; display: block; }
  .brand-text { display: flex; flex-direction: column; line-height: 1.1; }
  .brand-title { font-family: var(--font-serif); font-weight: 800; font-size: 1.5rem; letter-spacing: -0.5px; margin: 0; color: var(--text-main); }
  .highlight { color: var(--primary); }
  .brand-tagline { font-family: var(--font-sans); font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.5px; font-weight: 600; }

  /* NAV & BUTTONS */
  .desktop-nav { display: none; gap: 2rem; }
  .d-nav-link {
    font-family: var(--font-sans); font-weight: 700; font-size: 0.9rem;
    color: var(--text-main); text-decoration: none;
    padding: 0.5rem 0; border-bottom: 2px solid transparent;
    transition: all 0.2s; text-transform: uppercase;
  }
  .d-nav-link:hover, .d-nav-link.active { color: var(--primary); border-bottom-color: var(--primary); }

  .menu-toggle, .search-toggle {
    background: none; border: none; cursor: pointer; padding: 0.5rem;
    color: var(--text-main); border-radius: 50%; transition: background 0.2s;
    display: flex; align-items: center; justify-content: center;
  }
  .menu-toggle:hover, .search-toggle:hover { background: rgba(0,0,0,0.05); color: var(--primary); }

  /* --- 3. MOBILE DRAWER --- */
  .mobile-drawer {
    position: fixed; top: 0; left: 0; bottom: 0; width: 85%; max-width: 300px;
    background: var(--drawer-bg); z-index: 2000;
    transform: translateX(-100%); transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 4px 0 24px rgba(0,0,0,0.2); display: flex; flex-direction: column;
  }
  .mobile-drawer.active { transform: translateX(0); }
  .drawer-header { height: 72px; display: flex; align-items: center; justify-content: space-between; padding: 0 1.5rem; border-bottom: 1px solid var(--border); }
  .drawer-title { font-weight: 800; font-size: 1.2rem; color: var(--text-main); text-transform: uppercase; }
  #close-menu { background: none; border: none; color: var(--text-main); cursor: pointer; }
  .drawer-content { padding: 1.5rem; overflow-y: auto; flex: 1; }
  .m-nav-link { font-size: 1.1rem; font-weight: 700; color: var(--text-main); padding: 0.75rem 0; text-decoration: none; border-bottom: 1px solid var(--border); display: block; }
  .drawer-divider { height: 2rem; }
  .drawer-subtitle { font-size: 0.85rem; text-transform: uppercase; color: var(--text-muted); margin-bottom: 1rem; font-weight: 700; display: block; }
  .mobile-cat-grid { display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .m-cat-pill { background: rgba(0,0,0,0.05); color: var(--text-main); padding: 0.4rem 0.8rem; border-radius: 99px; font-size: 0.85rem; text-decoration: none; font-weight: 500; }
  
  .overlay {
    position: fixed; inset: 0; background: rgba(0,0,0,0.6); z-index: 1001;
    opacity: 0; visibility: hidden; transition: opacity 0.3s; backdrop-filter: blur(4px);
  }
  .overlay.active { opacity: 1; visibility: visible; }

  /* --- 4. IMPROVED SEARCH UI --- */
  .search-modal {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 3000;
    background: var(--bg-header); display: none; justify-content: center;
    padding-top: 80px; animation: slideDown 0.3s ease-out;
  }
  .search-modal.active { display: flex; }
  @keyframes slideDown { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }

  .search-container { width: 100%; max-width: 700px; padding: 0 1.5rem; display: flex; flex-direction: column; height: 80vh; }

  .search-bar-wrapper {
    display: flex; align-items: center; border-bottom: 2px solid var(--border);
    padding-bottom: 1rem; margin-bottom: 2rem; position: relative;
  }
  .search-bar-wrapper:focus-within { border-color: var(--primary); }
  
  .search-icon-input { color: var(--text-muted); margin-right: 1rem; }
  
  #search-input {
    flex: 1; border: none; background: transparent; font-size: 1.5rem;
    outline: none; font-weight: 600; color: var(--text-main); font-family: var(--font-sans);
  }
  #search-input::placeholder { color: var(--text-muted); opacity: 0.5; }

  .close-search-btn {
    background: rgba(0,0,0,0.05); border: none; color: var(--text-muted);
    font-size: 0.75rem; font-weight: 700; padding: 0.3rem 0.8rem;
    border-radius: 4px; cursor: pointer; text-transform: uppercase;
  }
  .close-search-btn:hover { background: var(--primary); color: white; }

  /* Search Body */
  .search-body { overflow-y: auto; padding-bottom: 2rem; }
  .hidden { display: none; }

  /* Default Tags */
  .search-label { font-size: 0.8rem; text-transform: uppercase; color: var(--text-muted); margin-bottom: 1rem; letter-spacing: 1px; }
  .trending-tags { display: flex; flex-wrap: wrap; gap: 0.8rem; }
  .trend-tag { 
    font-size: 0.9rem; color: var(--primary); background: rgba(220, 38, 38, 0.1); 
    padding: 0.5rem 1rem; border-radius: 6px; text-decoration: none; font-weight: 600;
  }
  .trend-tag:hover { background: var(--primary); color: white; }

  /* Results List */
  .search-result-card {
    display: flex; align-items: start; gap: 1rem; padding: 1rem;
    border-radius: 8px; text-decoration: none; margin-bottom: 0.5rem;
    transition: background 0.2s; border: 1px solid transparent;
  }
  .search-result-card:hover { background: rgba(0,0,0,0.03); border-color: var(--border); }
  
  .result-thumb { width: 80px; height: 60px; border-radius: 4px; object-fit: cover; flex-shrink: 0; background: #eee; }
  
  .result-content { flex: 1; }
  .result-cat { font-size: 0.65rem; text-transform: uppercase; color: var(--primary); font-weight: 700; display: block; margin-bottom: 0.2rem; }
  .result-title { font-size: 1rem; font-weight: 700; color: var(--text-main); margin: 0 0 0.2rem 0; line-height: 1.3; }
  .result-snippet { font-size: 0.8rem; color: var(--text-muted); display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden; margin: 0; }

  @media (min-width: 900px) {
    .menu-toggle { display: none; }
    .desktop-nav { display: flex; }
  }
</style>

<script is:inline define:vars={{posts: serializedPosts}}>
  // === UI LOGIC ===
  const menuBtn = document.getElementById('menu-toggle');
  const drawer = document.getElementById('mobile-drawer');
  const overlay = document.getElementById('site-overlay');
  const closeMenuBtn = document.getElementById('close-menu');

  function toggleMenu(show) {
    if(show) {
      drawer.classList.add('active');
      overlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    } else {
      drawer.classList.remove('active');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  menuBtn?.addEventListener('click', () => toggleMenu(true));
  closeMenuBtn?.addEventListener('click', () => toggleMenu(false));
  overlay?.addEventListener('click', () => {
    toggleMenu(false);
    toggleSearch(false);
  });

  // === SEARCH LOGIC ===
  const searchBtn = document.getElementById('search-toggle');
  const searchModal = document.getElementById('search-modal');
  const closeSearchBtn = document.getElementById('close-search');
  const searchInput = document.getElementById('search-input');
  const searchResults = document.getElementById('search-results');
  const searchDefault = document.getElementById('search-default');

  function toggleSearch(show) {
    if(show) {
      searchModal.classList.add('active');
      setTimeout(() => searchInput.focus(), 100);
      document.body.style.overflow = 'hidden';
    } else {
      searchModal.classList.remove('active');
      document.body.style.overflow = '';
      searchInput.value = '';
      searchResults.classList.add('hidden');
      searchDefault.classList.remove('hidden');
    }
  }

  searchBtn?.addEventListener('click', () => toggleSearch(true));
  closeSearchBtn?.addEventListener('click', () => toggleSearch(false));

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      toggleMenu(false);
      toggleSearch(false);
    }
  });

  searchInput?.addEventListener('input', (e) => {
    const query = e.target.value.toLowerCase().trim();
    
    if (query.length < 2) {
      searchResults.classList.add('hidden');
      searchDefault.classList.remove('hidden');
      return;
    }

    searchDefault.classList.add('hidden');
    searchResults.classList.remove('hidden');
    searchResults.innerHTML = '';

    const hits = posts.filter(post => {
      return post.title.toLowerCase().includes(query) ||
             post.tags.some(tag => tag.toLowerCase().includes(query)) ||
             post.description.toLowerCase().includes(query);
    }).slice(0, 5);

    if(hits.length === 0) {
      searchResults.innerHTML = '<div style="color:var(--text-muted); text-align:center; padding:2rem;">No results found.</div>';
    } else {
      hits.forEach(hit => {
        const item = document.createElement('a');
        item.href = `/posts/${hit.slug}`;
        item.className = 'search-result-card';
        item.innerHTML = `
          <img src="${hit.image}" class="result-thumb" alt="" />
          <div class="result-content">
             <span class="result-cat">${hit.category}</span>
             <h4 class="result-title">${hit.title}</h4>
             <p class="result-snippet">${hit.description.substring(0, 80)}...</p>
          </div>
        `;
        searchResults.appendChild(item);
      });
    }
  });
</script>