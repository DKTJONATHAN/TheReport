---
// components/Navigation.astro
---

<nav class="main-navigation" role="navigation" aria-label="Main Navigation">
  <div class="nav-container">
    <div class="nav-brand">
      <a href="/" class="brand-link">
        <span class="brand-name">Jonathan Mwaniki</span>
        <span class="brand-tagline">News</span>
      </a>
    </div>
    
    <div class="nav-links">
      <a href="/" class="nav-link active">Home</a>
      <a href="/news" class="nav-link">Latest News</a>
      <a href="/category/politics" class="nav-link">Politics</a>
      <a href="/category/business" class="nav-link">Business</a>
      <a href="/category/entertainment" class="nav-link">Entertainment</a>
      <a href="/category/sports" class="nav-link">Sports</a>
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" aria-label="Toggle navigation menu">
      <span class="hamburger"></span>
    </button>
  </div>

  <!-- Breaking News Ticker -->
  <div class="news-ticker">
    <span class="ticker-label">LIVE</span>
    <div class="ticker-content">
      Latest updates • Politics • Business • Entertainment • Sports
    </div>
  </div>
</nav>

<style>
  .main-navigation {
    background: var(--hero-bg);
    color: var(--hero-text);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 10px var(--shadow-color);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  .nav-brand {
    display: flex;
    align-items: center;
  }

  .brand-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  .brand-tagline {
    font-size: 0.8rem;
    opacity: 0.8;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: var(--hero-text);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover,
  .nav-link.active {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--hero-text);
    font-size: 1.5rem;
    cursor: pointer;
  }

  .news-ticker {
    background: var(--category-bg);
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 0.85rem;
    animation: subtle-pulse 3s ease-in-out infinite;
  }

  .ticker-label {
    background: var(--live-color, #10b981);
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    animation: flash 2s infinite;
  }

  .ticker-content {
    opacity: 0.9;
  }

  @keyframes subtle-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.95; }
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }

    .brand-name {
      font-size: 1.25rem;
    }

    .news-ticker {
      font-size: 0.8rem;
      padding: 0.4rem 0;
    }
  }
</style>