---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
  publishDate?: Date; // Optional: Useful for article schema
}

const { 
  title, 
  description = "Breaking news, politics, and trending stories from Kenya. The Mwaniki Report is your trusted source for truth.",
  image = "/default-social-card.jpg",
  canonical,
  type = 'website',
  publishDate
} = Astro.props;

// 1. ROBUST URL CONSTRUCTION
// Uses Astro.site from astro.config.mjs if available, otherwise falls back
const siteUrl = Astro.site ? Astro.site.href : "https://jonathanmwaniki.co.ke";

// Ensure canonical URL is absolute and clean
const canonicalURL = canonical 
  ? new URL(canonical, siteUrl).href 
  : new URL(Astro.url.pathname, siteUrl).href;

// Ensure social image is absolute
const socialImage = image.startsWith('http') 
  ? image 
  : new URL(image, siteUrl).href;

// 2. JSON-LD SCHEMA GENERATION
// This helps Google understand if this is a News Article or just the Home Page
const schema = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": title,
  "image": [socialImage],
  "datePublished": publishDate ? publishDate.toISOString() : new Date().toISOString(),
  "author": [{
      "@type": "Person",
      "name": "Jonathan Mwaniki",
      "url": "https://jonathanmwaniki.co.ke/about" // Adjust if you have an author page
    }]
} : {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Jonathan Mwaniki",
  "url": siteUrl,
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#dc2626" />
    <meta name="yandex-verification" content="4ec79656b15aa799" />
    
    {/* --- SITEMAP --- */}
    <link rel="sitemap" href="/sitemap-index.xml" />

    {/* --- SEO MAIN --- */}
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="author" content="Jonathan Mwaniki" />

    {/* --- OPEN GRAPH (Facebook/WhatsApp) --- */}
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:site_name" content="Jonathan Mwaniki" />

    {/* --- TWITTER CARD --- */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@maestropuns" />
    <meta name="twitter:creator" content="@maestropuns" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    {/* --- JSON-LD STRUCTURED DATA --- */}
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    {/* --- GOOGLE ADSENSE --- */}
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9291176772735390" crossorigin="anonymous"></script>

    {/* --- FONTS --- */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Merriweather:ital,wght@0,300;0,700;1,300&display=swap" rel="stylesheet">
  </head>

  <body>
    <Header />

    {/* WRAPPED IN MAIN FOR STICKY FOOTER & SEMANTICS */}
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* --- VARIABLES --- */
  :root {
    --accent: #dc2626;        /* Kenyan Red */
    --accent-hover: #b91c1c;
    --color-dark: #111827;
    --bg-color: #ffffff;
    --bg-light: #f3f4f6;
    --text-color: #1f2937;
    --text-light: #6b7280;
    --border: #e5e7eb;

    --font-head: 'Inter', system-ui, -apple-system, sans-serif;
    --font-body: 'Merriweather', Georgia, serif;

    --max-width: 1200px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color: #111827;
      --bg-light: #1f2937;
      --text-color: #f3f4f6;
      --text-light: #9ca3af;
      --border: #374151;
    }
  }

  /* --- RESETS --- */
  html {
    font-family: var(--font-head);
    background-color: var(--bg-color);
    color: var(--text-color);
    overflow-x: hidden; 
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Ensures Footer stays at bottom even on short pages */
  main {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  img { max-width: 100%; height: auto; display: block; }
</style>