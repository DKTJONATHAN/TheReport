---
// 1. Import your existing components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// 2. Define Props for SEO
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
}

// 3. Destructure props with defaults
const { 
  title, 
  description = "Breaking news, politics, and trending stories from Kenya. The Mwaniki Report is your trusted source for truth.",
  image = "/default-social-card.jpg", // Ensure this image exists in /public
  canonical,
  type = 'website'
} = Astro.props;

// 4. Construct Absolute URLs for Social Sharing
const siteUrl = "https://jonathanmwaniki.co.ke";
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
const socialImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#dc2626" />
<meta name="yandex-verification" content="4ec79656b15aa799" />

    {/* --- SEO MAIN --- */}
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="author" content="Jonathan Mwaniki" />

    {/* --- OPEN GRAPH (Facebook/WhatsApp) --- */}
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:site_name" content="Jonathan Mwaniki" />

    {/* --- TWITTER CARD --- */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@maestropuns" />
    <meta name="twitter:creator" content="@maestropuns" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    {/* --- GOOGLE ADSENSE (Global Script) --- */}
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9291176772735390" crossorigin="anonymous"></script>

    {/* --- GLOBAL FONTS (Optional) --- */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Merriweather:ital,wght@0,300;0,700;1,300&display=swap" rel="stylesheet">
  </head>
  
  <body>
    
    {/* Use your existing Header Component */}
    <Header />

    {/* The Page Content goes here */}
    <slot />

    {/* Use your existing Footer Component */}
    <Footer />

  </body>
</html>

<style is:global>
  /* --- GLOBAL VARIABLES (Used by Index & Slug pages) --- */
  :root {
    --accent: #dc2626;        /* Kenyan Red */
    --accent-hover: #b91c1c;
    --color-dark: #111827;
    --bg-color: #ffffff;
    --bg-light: #f3f4f6;
    --text-color: #1f2937;
    --text-light: #6b7280;
    --border: #e5e7eb;

    --font-head: 'Inter', system-ui, -apple-system, sans-serif;
    --font-body: 'Merriweather', Georgia, serif;
    
    --max-width: 1200px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color: #111827;
      --bg-light: #1f2937;
      --text-color: #f3f4f6;
      --text-light: #9ca3af;
      --border: #374151;
    }
  }

  /* --- BASIC RESETS --- */
  html {
    font-family: var(--font-head);
    background-color: var(--bg-color);
    color: var(--text-color);
    overflow-x: hidden; /* Prevent horizontal scroll globally */
  }
  
  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Make sure slot pushes footer down if content is short */
  body > :global(main) {
    flex: 1;
  }

  img { max-width: 100%; height: auto; display: block; }
</style>