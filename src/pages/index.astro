---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// --- 1. DATA LOGIC ---
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

if (allPosts.length === 0) {
  throw new Error("No posts found!");
}

const majorCategories = ['Politics', 'Business', 'Sports', 'Lifestyle', 'Technology'];
const isLive = (date) => (new Date() - new Date(date)) < 4 * 60 * 60 * 1000;

// Story Circles
const storyCircles = allPosts.slice(0, 10).map(post => ({
  label: post.data.category || 'News',
  image: post.data.image,
  link: `/posts/${post.slug}`,
  live: isLive(post.data.date)
}));

// Sections
const [heroMain, ...heroGrid] = allPosts.slice(0, 5);
const initialFeed = allPosts.slice(5, 13);
const hiddenFeed = allPosts.slice(13, 100); 
---

<Layout>
  <div class="jm-home-wrapper">

    {/* --- 1. LIVE PULSE BAR --- */}
    <section class="pulse-bar">
      <div class="jm-container">
        <div class="pulse-track">
          {storyCircles.map(item => (
            <a href={item.link} class="pulse-node">
              <div class={`ring-wrap ${item.live ? 'live' : ''}`}>
                <img src={item.image} alt={item.label} width="80" height="80" loading="eager" />
                {item.live && <span class="live-badge">LIVE</span>}
              </div>
              <span class="pulse-label">{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <main class="jm-container">

      {/* --- 2. BENTO HERO --- */}
      {/* AD PROTECTION: We add a specific class to stop ads breaking the grid */}
      <section class="bento-grid no-ad-injection">
        <article class="bento-feature glass-panel">
          <a href={`/posts/${heroMain.slug}`} class="bento-link">
            <img src={heroMain.data.image} alt={heroMain.data.title} class="bg-img" loading="eager" />
            <div class="gradient-overlay"></div>
            <div class="bento-content">
              <span class="cat-tag">{heroMain.data.category}</span>
              <h1>{heroMain.data.title}</h1>
              <p class="excerpt">{heroMain.data.description}</p>
              <span class="read-more">Read Story &rarr;</span>
            </div>
          </a>
        </article>

        <div class="bento-stack">
          {heroGrid.map(post => (
            <a href={`/posts/${post.slug}`} class="mini-card glass-panel">
              <div class="mini-img">
                <img src={post.data.image} alt={post.data.title} loading="lazy" />
              </div>
              <div class="mini-text">
                <span class="tiny-cat">{post.data.category}</span>
                <h3>{post.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </section>

      {/* --- 3. NEWS FEED --- */}
      <div class="content-split">
        
        <div class="feed-col">
          <div class="feed-header">
            <h2>Latest Updates</h2>
            <div class="line"></div>
          </div>

          <div id="feed-container" class="feed-list">
            {initialFeed.map(post => (
              <article class="feed-card glass-panel">
                <a href={`/posts/${post.slug}`} class="feed-link">
                  <div class="feed-info">
                    <div class="meta">
                      <span class="meta-cat">{post.data.category}</span>
                      <span class="meta-dot">•</span>
                      <time>{new Date(post.data.date).toLocaleDateString()}</time>
                    </div>
                    <h3>{post.data.title}</h3>
                    <p>{post.data.description}</p>
                  </div>
                  <div class="feed-img">
                    <img src={post.data.image} alt={post.data.title} loading="lazy" />
                  </div>
                </a>
              </article>
            ))}
          </div>

          {hiddenFeed.length > 0 && (
            <div class="load-more-wrap">
              <button id="btn-load-more" class="btn-load-more">
                <span>Unroll More Stories</span>
              </button>
            </div>
          )}
        </div>

        <aside class="sidebar-col">
          <div class="sticky-box">
            <div class="widget glass-panel">
              <h4 class="widget-title">Trending Topics</h4>
              <div class="tag-cloud">
                {majorCategories.map(cat => (
                  <a href={`/category/${cat.toLowerCase()}`} class="tag-pill">{cat}</a>
                ))}
              </div>
            </div>
          </div>
        </aside>

      </div>

    </main>
  </div>
</Layout>

<script define:vars={{ hiddenFeed }}>
  const loadBtn = document.getElementById('btn-load-more');
  const feedContainer = document.getElementById('feed-container');
  let loadedCount = 0;
  const BATCH_SIZE = 6;
  const allHidden = hiddenFeed;

  if(loadBtn) {
    loadBtn.addEventListener('click', () => {
      const nextBatch = allHidden.slice(loadedCount, loadedCount + BATCH_SIZE);
      
      nextBatch.forEach(post => {
        const dateStr = new Date(post.data.date).toLocaleDateString();
        const html = `
          <article class="feed-card glass-panel fade-in">
            <a href="/posts/${post.slug}" class="feed-link">
              <div class="feed-info">
                <div class="meta">
                  <span class="meta-cat">${post.data.category || 'News'}</span>
                  <span class="meta-dot">•</span>
                  <time>${dateStr}</time>
                </div>
                <h3>${post.data.title}</h3>
                <p>${post.data.description}</p>
              </div>
              <div class="feed-img">
                <img src="${post.data.image}" alt="${post.data.title}" loading="lazy" />
              </div>
            </a>
          </article>
        `;
        feedContainer.insertAdjacentHTML('beforeend', html);
      });

      loadedCount += BATCH_SIZE;
      if (loadedCount >= allHidden.length) {
        loadBtn.style.display = 'none';
      }
    });
  }
</script>

<style is:global>
  /* --- GLOBAL VARS --- */
  :root {
    --jm-bg: #0f172a;
    --jm-card: rgba(30, 41, 59, 0.6);
    --jm-border: rgba(255, 255, 255, 0.08);
    --jm-text-main: #f8fafc;
    --jm-text-muted: #94a3b8;
    --jm-accent: #ef4444;
    --jm-font-head: 'Inter', sans-serif;
    --jm-font-body: 'Merriweather', serif;
  }

  /* --- AD PROTECTION (Crucial for Layout Shifts) --- */
  .jm-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    box-sizing: border-box;
    /* Prevent ads from expanding container width */
    overflow-x: hidden; 
  }
  
  /* Prevent Google from injecting into the grid and breaking it */
  .bento-grid, .bento-stack {
    display: grid;
  }

  /* --- SHARED CARD STYLES --- */
  .glass-panel {
    background: var(--jm-card);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--jm-border);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
    /* Fix for AdSense trying to inject inside cards */
    isolation: isolate; 
  }
  .glass-panel:hover {
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  /* --- FEED CARD --- */
  .feed-card { padding: 1.5rem; margin-bottom: 1.5rem; }
  .feed-link { display: flex; flex-direction: column-reverse; gap: 1.5rem; text-decoration: none; color: inherit; }
  
  @media (min-width: 640px) {
    .feed-link { flex-direction: row; justify-content: space-between; align-items: flex-start; }
    .feed-info { flex: 1; min-width: 0; /* Prevents flex blowout */ }
    .feed-img { width: 240px; height: 160px; flex-shrink: 0; }
  }

  .feed-img { width: 100%; height: 200px; border-radius: 8px; overflow: hidden; }
  .feed-img img { width: 100%; height: 100%; object-fit: cover; }
  
  .meta { font-family: var(--jm-font-head); font-size: 0.75rem; color: var(--jm-text-muted); font-weight: 700; text-transform: uppercase; margin-bottom: 0.8rem; display: flex; align-items: center; gap: 0.5rem; }
  .meta-cat { color: var(--jm-accent); }
  
  .feed-info h3 { font-family: var(--jm-font-head); font-size: 1.4rem; font-weight: 700; margin: 0 0 0.8rem 0; line-height: 1.25; color: white; }
  .feed-info p { font-family: var(--jm-font-body); font-size: 0.95rem; line-height: 1.6; color: var(--jm-text-muted); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; margin: 0; }
  .fade-in { animation: fadeIn 0.4s ease-out forwards; }
  @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<style>
  .jm-home-wrapper { background-color: var(--jm-bg); color: var(--jm-text-main); font-family: var(--jm-font-body); width: 100%; padding-bottom: 4rem; }
  img { width: 100%; height: 100%; object-fit: cover; display: block; }
  a { text-decoration: none; color: inherit; transition: 0.2s ease; }

  /* Pulse Bar */
  .pulse-bar { padding: 1.5rem 0; border-bottom: 1px solid var(--jm-border); margin-bottom: 2.5rem; }
  .pulse-track { display: flex; gap: 1.5rem; overflow-x: auto; padding-bottom: 5px; scrollbar-width: none; }
  .pulse-track::-webkit-scrollbar { display: none; }
  .pulse-node { display: flex; flex-direction: column; align-items: center; width: 80px; flex-shrink: 0; }
  .ring-wrap { width: 80px; height: 80px; border-radius: 50%; padding: 3px; border: 2px solid transparent; position: relative; margin-bottom: 0.5rem; }
  .ring-wrap img { border-radius: 50%; border: 2px solid var(--jm-bg); }
  .ring-wrap.live { border-color: var(--jm-accent); }
  .live-badge { position: absolute; bottom: -2px; left: 50%; transform: translateX(-50%); background: var(--jm-accent); color: white; font-family: var(--jm-font-head); font-size: 0.6rem; font-weight: 800; padding: 2px 6px; border-radius: 4px; border: 2px solid var(--jm-bg); }
  .pulse-label { font-family: var(--jm-font-head); font-size: 0.75rem; font-weight: 600; color: var(--jm-text-muted); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; }

  /* Bento Grid */
  .bento-grid { display: grid; gap: 1.5rem; margin-bottom: 4rem; }
  @media (min-width: 1024px) { .bento-grid { grid-template-columns: 2fr 1fr; height: 520px; } }

  .bento-feature { position: relative; height: 100%; min-height: 400px; }
  .bento-link { display: block; height: 100%; width: 100%; }
  .bg-img { width: 100%; height: 100%; transition: transform 0.5s ease; }
  .bento-feature:hover .bg-img { transform: scale(1.03); }
  .gradient-overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(15,23,42, 1) 0%, transparent 60%); }
  .bento-content { position: absolute; bottom: 0; left: 0; padding: 2.5rem; z-index: 2; }
  .cat-tag { background: var(--jm-accent); color: white; font-family: var(--jm-font-head); font-weight: 800; text-transform: uppercase; font-size: 0.75rem; padding: 4px 10px; border-radius: 4px; display: inline-block; margin-bottom: 1rem; }
  .bento-content h1 { font-family: var(--jm-font-head); font-size: clamp(1.8rem, 4vw, 3rem); font-weight: 800; line-height: 1.1; margin: 0 0 1rem 0; color: white; }
  .excerpt { color: rgba(255,255,255,0.8); font-size: 1.1rem; line-height: 1.5; margin-bottom: 1.5rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .read-more { font-family: var(--jm-font-head); font-weight: 700; color: var(--jm-accent); text-transform: uppercase; letter-spacing: 0.5px; font-size: 0.85rem; }

  /* --- MOBILE READABILITY FIX --- */
  /* On desktop: 1 column of 4 rows */
  .bento-stack { display: grid; grid-template-rows: repeat(4, 1fr); gap: 1rem; height: 100%; }
  
  /* On Tablet (768px - 1023px): 2 columns, 2 rows */
  @media (max-width: 1023px) { 
    .bento-stack { grid-template-columns: 1fr 1fr; grid-template-rows: auto; height: auto; } 
  }

  /* On Phone (< 640px): 1 COLUMN (Full Width) */
  /* This fixes the text being too small or squashed */
  @media (max-width: 640px) {
    .bento-stack { grid-template-columns: 1fr; }
  }
  
  .mini-card { display: flex; gap: 1rem; padding: 0.75rem; align-items: center; }
  .mini-img { width: 90px; height: 80px; border-radius: 8px; overflow: hidden; flex-shrink: 0; }
  .mini-text h3 { font-family: var(--jm-font-head); font-size: 1rem; font-weight: 600; margin: 0; line-height: 1.35; color: var(--jm-text-main); }
  .tiny-cat { font-family: var(--jm-font-head); font-size: 0.7rem; color: var(--jm-accent); font-weight: 800; text-transform: uppercase; display: block; margin-bottom: 4px; }

  /* Content Split */
  @media (min-width: 1024px) { .content-split { display: grid; grid-template-columns: 1fr 320px; gap: 3rem; } }
  .feed-header { display: flex; align-items: center; gap: 1.5rem; margin-bottom: 2rem; }
  .feed-header h2 { font-family: var(--jm-font-head); font-size: 1.5rem; margin: 0; white-space: nowrap; }
  .line { flex: 1; height: 1px; background: var(--jm-border); }
  .feed-list { display: flex; flex-direction: column; gap: 1rem; margin-bottom: 2rem; }

  /* Button */
  .load-more-wrap { text-align: center; margin-top: 1rem; }
  .btn-load-more { display: inline-flex; align-items: center; gap: 0.8rem; background: transparent; border: 1px solid var(--jm-border); color: var(--jm-text-main); padding: 1rem 3rem; border-radius: 50px; font-family: var(--jm-font-head); font-weight: 700; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px; cursor: pointer; transition: 0.3s ease; }
  .btn-load-more:hover { background: var(--jm-accent); border-color: var(--jm-accent); transform: translateY(-2px); box-shadow: 0 4px 20px rgba(239, 68, 68, 0.4); }

  /* Sidebar */
  .sticky-box { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; }
  .widget { padding: 1.5rem; }
  .widget-title { font-family: var(--jm-font-head); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; color: var(--jm-text-muted); margin: 0 0 1.5rem 0; border-bottom: 1px solid var(--jm-border); padding-bottom: 0.5rem; }
  .tag-cloud { display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .tag-pill { background: rgba(255,255,255,0.05); border: 1px solid var(--jm-border); padding: 8px 16px; border-radius: 30px; font-family: var(--jm-font-head); font-size: 0.75rem; font-weight: 600; color: var(--jm-text-main); }
  .tag-pill:hover { background: var(--jm-accent); border-color: var(--jm-accent); }
</style>