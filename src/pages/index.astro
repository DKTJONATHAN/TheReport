---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all posts sorted by date (newest first)
const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Get unique categories
const categories = [...new Set(allPosts.map(post => post.data.category))].filter(Boolean);

// Get the most recent post for featured display
const featuredPost = allPosts[0];

// Get top 5 popular posts (here using recency as proxy)
const popularPosts = allPosts.slice(0, 5);

// Latest news for ticker (limit 10 items)
const latestTickerPosts = allPosts.slice(0, 10);

// Related articles helper by category excluding featured post
const relatedArticlesByCategory = {};
for (const category of categories) {
  relatedArticlesByCategory[category] = allPosts.filter(post => post.data.category === category && post.slug !== featuredPost?.slug).slice(0, 3);
}
---

<Layout 
  title="Breaking News Kenya Today | Latest Updates & Headlines | Jonathan Mwaniki" 
  description="Stay updated with the latest breaking news from Kenya including politics, sports, business, entertainment and trending stories across Nairobi and the entire country."
>
  <meta name="keywords" content="Kenya news today, breaking news Kenya, Nairobi latest news, Kenyan politics, Kenya sports news, Kenya entertainment updates, business news Kenya, trending Kenya stories, Jonathan Mwaniki news"/>
  <meta name="author" content="Jonathan Mwaniki" />
  <meta property="og:title" content="Breaking News Kenya Today | Latest Headlines | Jonathan Mwaniki" />
  <meta property="og:description" content="Your trusted source for latest news in Kenya. Breaking Kenya news, politics, entertainment, sports, and business updates." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://jonathanmwaniki.co.ke" />
  <meta property="og:site_name" content="Jonathan Mwaniki News" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Breaking News Kenya Today | Jonathan Mwaniki" />
  <meta name="twitter:description" content="Latest breaking news from Kenya including trending stories from Nairobi and across the country." />

  <!-- AdSense Script -->
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9291176772735390"
         crossorigin="anonymous"></script>

  <!-- Structured Data for News -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "NewsMediaOrganization",
    "name": "Jonathan Mwaniki News",
    "url": "https://jonathanmwaniki.co.ke",
    "description": "Kenya's premier source for breaking news, politics, entertainment, and trending stories",
    "sameAs": [
      "https://twitter.com/maestropuns",
      "https://facebook.com/jonathanmwaniki"
    ]
  }
  </script>

  <main class="main-container">
    <!-- Header -->
    <header class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">Trending News Kenya</h1>
        <p class="hero-subtitle">Your trusted source for the latest Kenyan news, politics, entertainment, and trending stories</p>
        <!-- Latest News Ticker -->
        <div class="news-ticker" aria-label="Latest news ticker">
          <span class="ticker-label">LATEST NEWS:</span>
          <div class="ticker-scroll" role="list">
            {latestTickerPosts.map(post => (
              <a 
                href={`/posts/${post.slug}`} 
                class="ticker-item" 
                role="listitem"
                aria-label={`Latest news headline: ${post.data.title}`}
              >
                {post.data.title}
              </a>
            ))}
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Post -->
    {featuredPost && (
      <section class="featured-section" aria-label="Top Story">
        <h2 class="section-title">Top Story</h2>
        <article class="featured-post">
          <a 
            href={`/posts/${featuredPost.slug}`} 
            class="featured-link"
            aria-label={`Read breaking story: ${featuredPost.data.title}`}
          >
            <div class="featured-image-container">
              <img
                src={featuredPost.data.image}
                alt={featuredPost.data.imageAlt || featuredPost.data.title}
                class="featured-image"
                loading="eager"
                width="800"
                height="450"
              />
              <div class="breaking-badge">TOP STORY</div>
            </div>
            <div class="featured-content">
              <div class="featured-meta">
                <span class="featured-category">{featuredPost.data.category}</span>
                <time class="featured-date" datetime={featuredPost.data.date}>
                  {new Date(featuredPost.data.date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                  })}
                </time>
              </div>
              <h3 class="featured-title">{featuredPost.data.title}</h3>
              <p class="featured-excerpt">{featuredPost.data.description}</p>
              <div class="featured-footer">
                <span class="read-more-featured" role="button" tabindex="0">
                  Read Full Story
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </article>
      </section>
    )}

    <!-- Popular Posts -->
    {popularPosts.length > 0 && (
      <section class="popular-section" aria-label="Popular News Stories">
        <h2 class="section-title">Popular News</h2>
        <div class="posts-grid popular-grid">
          {popularPosts.map(post => (
            <article class="post-card popular-post">
              <a href={`/posts/${post.slug}`} class="post-link" aria-label={`Read popular article: ${post.data.title}`}>
                {post.data.image && (
                  <div class="post-image-container popular-image-container">
                    <img
                      src={post.data.image}
                      alt={post.data.imageAlt || post.data.title}
                      class="post-image"
                      loading="lazy"
                      width="300"
                      height="180"
                    />
                  </div>
                )}
                <div class="post-content">
                  <div class="post-meta">
                    <span class="post-category">{post.data.category}</span>
                    <time class="post-date" datetime={post.data.date}>
                      {new Date(post.data.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  <h3 class="post-title">{post.data.title}</h3>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- Category Sections -->
    {categories.map(category => {
      const categoryPosts = allPosts
        .filter(post => post.data.category === category)
        .slice(0, 3);

      const relatedArticles = relatedArticlesByCategory[category];
      return categoryPosts.length > 0 ? (
        <section class="category-section" aria-label={`${category} News`}>
          <div class="category-header">
            <h2 class="section-title">Latest {category} News</h2>
            <a href={`/category/${category.toLowerCase()}`} class="category-more" aria-label={`More ${category} news`}>
              See more
            </a>
          </div>

          <div class="posts-grid">
            {categoryPosts.map((post, index) => (
              <article class="post-card" key={post.slug}>
                <a 
                  href={`/posts/${post.slug}`} 
                  class="post-link"
                  aria-label={`Read article: ${post.data.title}`}
                >
                  {post.data.image && (
                    <div class="post-image-container">
                      <img
                        src={post.data.image}
                        alt={post.data.imageAlt || post.data.title}
                        class="post-image"
                        loading="lazy"
                        width="400"
                        height="240"
                      />
                    </div>
                  )}
                  <div class="post-content">
                    <div class="post-meta">
                      <span class="post-category">{post.data.category}</span>
                      <time class="post-date" datetime={post.data.date}>
                        {new Date(post.data.date).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                    <h3 class="post-title">{post.data.title}</h3>
                    {post.data.description && <p class="post-excerpt">{post.data.description}</p>}
                    <div class="post-footer">
                      <span class="read-more">Read Article</span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>

          {/* Related Articles Section with small images */}
          {relatedArticles?.length > 0 && (
            <aside class="related-articles" aria-label={`Related articles in ${category}`}>
              <h3 class="related-title">Related {category} Stories</h3>
              <div class="related-list">
                {relatedArticles.map(post => (
                  <a href={`/posts/${post.slug}`} key={post.slug} class="related-article">
                    {post.data.image && (
                      <img 
                        src={post.data.image} 
                        alt={post.data.imageAlt || post.data.title} 
                        loading="lazy" 
                        width="120" 
                        height="75" 
                        class="related-image" 
                      />
                    )}
                    <span class="related-title-text">{post.data.title}</span>
                  </a>
                ))}
              </div>
            </aside>
          )}
        </section>
      ) : null;
    })}

    {allPosts.length === 0 && (
      <div class="empty-state">
        <h2>No news available</h2>
        <p>Check back soon for the latest Kenyan news and updates!</p>
      </div>
    )}
  </main>

  <style>
    /* Root variables and Dark mode, unchanged from your original. */
    /* ... keep your existing variables and dark mode styles ... */

    /* Additional styles for ticker */
    .news-ticker {
      display: flex;
      align-items: center;
      overflow: hidden;
      background: var(--category-bg);
      border-radius: 4px;
      padding: 0.5rem 1rem;
      margin-top: 1rem;
      gap: 1rem;
      color: var(--category-text);
      font-weight: 600;
    }

    .ticker-label {
      flex-shrink: 0;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .ticker-scroll {
      white-space: nowrap;
      overflow: hidden;
      flex-grow: 1;
      animation: ticker-scroll 20s linear infinite;
      display: flex;
      gap: 3rem;
    }

    .ticker-item {
      color: var(--category-text);
      text-decoration: none;
      font-size: 0.9rem;
      user-select: none;
      display: inline-block;
    }

    .ticker-item:hover,
    .ticker-item:focus {
      text-decoration: underline;
      outline: none;
    }

    @keyframes ticker-scroll {
      0%   { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }

    /* Popular posts styling */
    .popular-section {
      margin: 3rem 0;
    }

    .popular-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .popular-post .post-image-container {
      height: 180px;
    }

    .popular-post .post-title {
      font-size: 1.15rem;
    }

    /* Category header with 'See more' aligned right */
    .category-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .category-more {
      font-weight: 600;
      color: var(--read-more);
      text-decoration: none;
    }

    .category-more:hover,
    .category-more:focus {
      color: var(--read-more-hover);
      text-decoration: underline;
      outline: none;
    }

    /* Related articles small image list */
    .related-articles {
      margin-top: 2rem;
      padding-top: 1rem;
      border-top: 1px solid var(--card-border);
    }

    .related-title {
      font-size: 1.25rem;
      margin-bottom: 1rem;
      font-weight: 700;
      color: var(--text-color);
    }

    .related-list {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .related-article {
      display: flex;
      flex-direction: column;
      width: 120px;
      text-decoration: none;
      color: var(--text-color);
    }

    .related-article:hover .related-title-text,
    .related-article:focus .related-title-text {
      text-decoration: underline;
      outline: none;
    }

    .related-image {
      border-radius: 6px;
      object-fit: cover;
      width: 120px;
      height: 75px;
      margin-bottom: 0.5rem;
    }

    .related-title-text {
      font-size: 0.9rem;
      font-weight: 500;
      line-height: 1.2;
      height: 2.4em; /* two lines clamp */
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* Retain your existing styles for hero, featured posts, posts-grid, etc., unchanged */

  </style>
</Layout>
