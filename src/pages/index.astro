import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all posts sorted by date (newest first)
const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Get unique categories
const categories = [...new Set(allPosts.map(post => post.data.category))].filter(Boolean);

// Get the most recent post for featured display
const featuredPost = allPosts[0];

// Get top 5 popular posts (using recency)
const popularPosts = allPosts.slice(0, 5);

// Related articles helper by category (excluding featured post)
const relatedArticlesByCategory = {};
for (const category of categories) {
  relatedArticlesByCategory[category] = allPosts
    .filter(post => post.data.category === category && post.slug !== featuredPost?.slug)
    .slice(0, 3);
}
