                      <span class="post-category">{post.data.category}</span>
                      <time class="post-date" datetime={post.data.date}>
                        {new Date(post.data.date).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                    <h3 class="post-title">{post.data.title}</h3>
                    {post.data.description && <p class="post-excerpt">{post.data.description}</p>}
                    <div class="post-footer">
                      <span class="btn btn-outline read-more">Read Article</span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>

          {/* Related Articles Section with small images */}
          {relatedArticles?.length > 0 && (
            <aside class="related-articles" aria-label={`Related articles in ${category}`}>
              <h3 class="related-title">Related {category} Stories</h3>
              <div class="related-list">
                {relatedArticles.map(post => (
                  <a href={`/posts/${post.slug}`} key={post.slug} class="related-article">
                    {post.data.image && (
                      <img 
                        src={post.data.image} 
                        alt={post.data.imageAlt || post.data.title} 
                        loading="lazy" 
                        width="120" 
                        height="75" 
                        class="related-image" 
                      />
                    )}
                    <span class="related-title-text">{post.data.title}</span>
                  </a>
                ))}
              </div>
            </aside>
          )}
        </section>
      ) : null;
    })}

    {allPosts.length === 0 && (
      <div class="empty-state">
        <h2>No news available</h2>
        <p>Check back soon for the latest Kenyan news and updates!</p>
      </div>
    )}
