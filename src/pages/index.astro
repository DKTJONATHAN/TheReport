---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC (Server-Side)
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

// Preparation for client-side consumption
const serializedPosts = allPosts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  image: post.data.image,
  slug: post.slug,
  author: post.data.author || 'Jonathan Mwaniki'
}));

const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="The Mwaniki Report | News Feed" description="Latest breaking news and analysis.">

  <div class="page-wrapper">
    <main class="main-container">

      {/* --- FEED CONTROLS --- */}
      <section class="feed-header">
        <div class="control-panel card-box">
          <div class="feed-info">
            <h2>The Newsroom</h2>
            <p>Chronological feed of latest events</p>
          </div>
          
          <div class="toggle-wrapper">
            <span class="toggle-label">Sort By:</span>
            <div class="toggle-group" id="feed-toggle">
              <button class="toggle-btn active" data-mode="time">Latest First</button>
              <button class="toggle-btn" data-mode="category">Category</button>
            </div>
          </div>
        </div>
      </section>

      <div class="layout-grid">

        {/* --- DYNAMIC FEED COLUMN --- */}
        <div class="feed-column">
          <div id="posts-container" class="news-river">
            {/* Posts are injected here via script */}
          </div>

          <div class="load-more-area">
            <button id="load-more-btn" class="more-btn">
              <span>Unroll More Stories</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
            </button>
            <p id="end-message" class="end-text hidden">You have reached the end of the newsroom.</p>
          </div>
        </div>

        {/* --- SIDEBAR --- */}
        <aside class="sidebar-column">
          <div class="sticky-wrapper">
            <div class="widget social-widget card-box">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <a href="#" class="social-row" style={`--accent-color:${s.bg}`}>
                    <div class="social-icon">
                      <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-details">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>

            <div class="widget cta-widget card-box dark-theme">
              <h3>Newsletter</h3>
              <p>Get the morning brief delivered to your inbox daily.</p>
              <form class="cta-form">
                <input type="email" placeholder="Enter your email" required />
                <button type="submit">Join</button>
              </form>
            </div>
          </div>
        </aside>

      </div>
    </main>
  </div>

  {/* --- INTERACTION SCRIPT --- */}
  <script is:inline define:vars={{ serializedPosts }}>
    let currentMode = 'time';
    let visibleCount = 6;
    const increment = 6;
    
    const container = document.getElementById('posts-container');
    const loadMoreBtn = document.getElementById('load-more-btn');
    const endMsg = document.getElementById('end-message');
    const toggleBtns = document.querySelectorAll('.toggle-btn');

    function getSortedPosts() {
      if (currentMode === 'time') {
        return [...serializedPosts].sort((a, b) => new Date(b.date) - new Date(a.date));
      } else {
        return [...serializedPosts].sort((a, b) => a.category.localeCompare(b.category));
      }
    }

    function renderPosts(isAppend = false) {
      const allSorted = getSortedPosts();
      const slice = allSorted.slice(isAppend ? visibleCount - increment : 0, visibleCount);

      if (!isAppend) container.innerHTML = '';

      slice.forEach(post => {
        const dateStr = new Date(post.date).toLocaleDateString('en-KE', { 
          day: 'numeric', month: 'short', year: 'numeric' 
        });
        
        const html = `
          <article class="river-item card-box entry-animation">
            <a href="/posts/${post.slug}" class="river-link">
              <div class="river-content">
                <div class="river-meta">
                  <span class="cat-badge">${post.category}</span>
                  <span class="time-stamp">${dateStr}</span>
                </div>
                <h3>${post.title}</h3>
                <p>${post.description}</p>
              </div>
              <div class="river-img">
                <img src="${post.image}" alt="${post.title}" loading="lazy" />
              </div>
            </a>
          </article>
        `;
        container.insertAdjacentHTML('beforeend', html);
      });

      // Update Visibility of Load More
      if (visibleCount >= allSorted.length) {
        loadMoreBtn.classList.add('hidden');
        endMsg.classList.remove('hidden');
      } else {
        loadMoreBtn.classList.remove('hidden');
        endMsg.classList.add('hidden');
      }
    }

    // Toggle Listeners
    toggleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        toggleBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentMode = btn.dataset.mode;
        visibleCount = 6; // Reset count on sort change
        renderPosts();
      });
    });

    // Load More Listener
    loadMoreBtn.addEventListener('click', () => {
      visibleCount += increment;
      renderPosts(true);
    });

    // Init
    renderPosts();
  </script>

  <style>
    /* --- VARIABLES & CORE --- */
    :root {
      --bg: #fdfdfd;  
      --card: #ffffff;
      --text: #111827; 
      --muted: #6b7280; 
      --accent: #b91c1c; 
      --border: #f3f4f6; 
      --font-head: 'Inter', sans-serif;
      --radius: 12px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #030712; --card: #111827; --text: #f9fafb; --muted: #9ca3af; --border: #1f2937;
      }
    }

    body { background: var(--bg); color: var(--text); font-family: 'Georgia', serif; margin: 0; }
    .main-container { max-width: 1100px; margin: 0 auto; padding: 2rem 1rem; }
    .card-box { background: var(--card); border: 1px solid var(--border); border-radius: var(--radius); overflow: hidden; }
    .hidden { display: none !important; }

    /* --- FEED HEADER --- */
    .feed-header { margin-bottom: 2rem; }
    .control-panel { 
      display: flex; justify-content: space-between; align-items: center; 
      padding: 1.5rem; gap: 1rem; flex-wrap: wrap; 
    }
    .feed-info h2 { margin: 0; font-family: var(--font-head); font-size: 1.5rem; }
    .feed-info p { margin: 0.2rem 0 0; color: var(--muted); font-size: 0.9rem; }

    .toggle-wrapper { display: flex; align-items: center; gap: 1rem; }
    .toggle-label { font-family: var(--font-head); font-weight: 700; font-size: 0.8rem; text-transform: uppercase; color: var(--muted); }
    
    .toggle-group { display: flex; background: var(--bg); padding: 4px; border-radius: 8px; border: 1px solid var(--border); }
    .toggle-btn {
      border: none; background: transparent; padding: 0.4rem 1rem; border-radius: 6px;
      font-family: var(--font-head); font-weight: 600; font-size: 0.85rem; cursor: pointer;
      color: var(--muted); transition: 0.2s;
    }
    .toggle-btn.active { background: var(--accent); color: white; }

    /* --- FEED ITEMS --- */
    .news-river { display: flex; flex-direction: column; gap: 1.5rem; }
    .river-item { padding: 1.5rem; transition: transform 0.2s; }
    .river-item:hover { transform: translateY(-2px); border-color: var(--accent); }
    
    .river-link { display: flex; gap: 1.5rem; text-decoration: none; color: inherit; }
    .river-content { flex: 1; }
    .river-meta { display: flex; gap: 0.8rem; align-items: center; margin-bottom: 0.5rem; }
    .cat-badge { font-family: var(--font-head); font-size: 0.7rem; font-weight: 800; color: var(--accent); text-transform: uppercase; }
    .time-stamp { font-family: var(--font-head); font-size: 0.75rem; color: var(--muted); }
    
    .river-content h3 { font-family: var(--font-head); font-size: 1.3rem; margin: 0.5rem 0; line-height: 1.3; }
    .river-content p { font-size: 0.95rem; line-height: 1.5; color: var(--muted); margin: 0; }
    
    .river-img { width: 180px; height: 120px; border-radius: 8px; overflow: hidden; flex-shrink: 0; }
    .river-img img { width: 100%; height: 100%; object-fit: cover; }

    /* --- LOAD MORE --- */
    .load-more-area { margin-top: 3rem; text-align: center; }
    .more-btn {
      background: var(--text); color: var(--bg); border: none; padding: 1rem 2rem;
      border-radius: 50px; font-family: var(--font-head); font-weight: 800;
      cursor: pointer; display: inline-flex; align-items: center; gap: 0.8rem;
      transition: opacity 0.2s;
    }
    .more-btn:hover { opacity: 0.9; }
    .end-text { font-family: var(--font-head); font-weight: 600; color: var(--muted); }

    /* --- LAYOUT & SIDEBAR --- */
    .layout-grid { display: grid; gap: 2.5rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 300px; } }
    
    .sidebar-column { display: none; }
    @media (min-width: 1024px) { .sidebar-column { display: block; } .sticky-wrapper { position: sticky; top: 1.5rem; display: flex; flex-direction: column; gap: 1.5rem; } }

    .widget { padding: 1.5rem; }
    .widget-title { font-family: var(--font-head); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem; margin-bottom: 1rem; }
    
    .social-list { display: flex; flex-direction: column; gap: 0.8rem; }
    .social-row { display: flex; align-items: center; gap: 1rem; text-decoration: none; color: inherit; }
    .social-icon { width: 32px; height: 32px; color: var(--accent-color); border: 1px solid var(--border); border-radius: 50%; padding: 6px; }
    .social-details { display: flex; flex-direction: column; line-height: 1.1; font-family: var(--font-head); }
    .social-details .count { font-weight: 800; font-size: 0.9rem; }
    .social-details .label { font-size: 0.7rem; color: var(--muted); text-transform: uppercase; }

    .dark-theme { background: var(--text); color: var(--bg); }
    .cta-form { display: flex; gap: 0.5rem; margin-top: 1rem; }
    .cta-form input { flex: 1; padding: 0.6rem; border-radius: 4px; border: none; font-size: 0.8rem; }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.6rem 1rem; border-radius: 4px; font-weight: 700; cursor: pointer; }

    /* --- ANIMATION --- */
    .entry-animation { animation: slideUp 0.4s ease forwards; }
    @keyframes slideUp { 
      from { opacity: 0; transform: translateY(20px); } 
      to { opacity: 1; transform: translateY(0); } 
    }

    @media (max-width: 768px) {
      .river-link { flex-direction: column-reverse; }
      .river-img { width: 100%; height: 200px; }
      .control-panel { flex-direction: column; align-items: flex-start; }
    }
  </style>
</Layout>