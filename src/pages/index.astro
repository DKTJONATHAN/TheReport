---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const majorCategories = ['Politics', 'Business', 'Sports', 'Lifestyle', 'Opinion'];

// 2. STORY CIRCLES
const categoryCircles = majorCategories.map(cat => {
  const latest = allPosts.find(p => p.data.category === cat);
  return { type: 'category', label: cat, image: latest?.data.image, link: `/category/${cat.toLowerCase()}` };
});
const latestStoryCircles = allPosts.slice(0, 7).map(post => ({
  type: 'story', label: post.data.category || 'News', image: post.data.image, link: `/posts/${post.slug}`
}));
const combinedCircles = [...categoryCircles, ...latestStoryCircles];

// 3. SECTIONS
const mainStory = allPosts[0];
const subStories = allPosts.slice(1, 3);
const trendingPosts = allPosts.slice(3, 9); // Increased to 6 for the grid
const opinionPosts = allPosts.filter(p => p.data.category === 'Opinion').slice(0, 3);
// Fallback if no opinion posts found, just take some from the end
const displayOpinion = opinionPosts.length > 0 ? opinionPosts : allPosts.slice(10, 13);

const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="Breaking News Kenya | Jonathan Mwaniki" description="Latest breaking news from Kenya.">

  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

  <div class="page-wrapper">

    {/* --- 1. STORIES BAR (Instagram Style) --- */}
    <section class="stories-section">
      <div class="main-container">
        <div class="stories-scroll">
          {combinedCircles.map(item => (
            <a href={item.link} class="story-item">
              <div class="story-img-ring">
                <img src={item.image || '/default-image.jpg'} alt={item.label} loading="eager" />
              </div>
              <span class="story-label">{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <main class="main-container">

      {/* --- 2. HERO SECTION (Preserved Logic, Refined Style) --- */}
      {mainStory && (
        <section class="hero-wrapper">
          <div class="hero-main">
            <a href={`/posts/${mainStory.slug}`} class="hero-link">
              <div class="hero-img-box">
                <img src={mainStory.data.image} alt={mainStory.data.title} loading="eager" />
                <span class="hero-badge">Top Story</span>
              </div>
              <div class="hero-text-box">
                <div class="meta-row">
                   <span class="cat-tag">{mainStory.data.category}</span>
                   <span class="bullet">â€¢</span>
                   <span class="date">{new Date(mainStory.data.date).toLocaleDateString()}</span>
                </div>
                <h1>{mainStory.data.title}</h1>
                <p class="hero-excerpt">{mainStory.data.description}</p>
              </div>
            </a>
          </div>

          <div class="hero-side">
            {subStories.map(post => (
              <a href={`/posts/${post.slug}`} class="sub-card">
                <div class="sub-img">
                  <img src={post.data.image} alt={post.data.title} loading="eager" />
                </div>
                <div class="sub-text">
                  <span class="sub-cat">{post.data.category}</span>
                  <h3>{post.data.title}</h3>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      {/* --- 3. MAIN CONTENT LAYOUT (Sidebar Layout) --- */}
      <div class="layout-grid">

        {/* LEFT COLUMN: THE FEED */}
        <div class="feed-column">

          {/* SECTION A: LATEST NEWS RIVER */}
          <div class="section-header">
            <h2>The Latest</h2>
            <div class="header-line"></div>
          </div>

          <div class="news-river">
            {trendingPosts.map(post => (
              <article class="river-item">
                <a href={`/posts/${post.slug}`} class="river-link">
                  <div class="river-content">
                    <div class="river-meta">
                      <span class="river-cat">{post.data.category}</span>
                      <span class="river-time">{new Date(post.data.date).toLocaleDateString()}</span>
                    </div>
                    <h3>{post.data.title}</h3>
                    <p>{post.data.description}</p>
                  </div>
                  <div class="river-img">
                    <img src={post.data.image} alt={post.data.title} loading="lazy" />
                  </div>
                </a>
              </article>
            ))}
          </div>

          {/* SECTION B: FEATURED / OPINION (Dark Mode Block) */}
          <section class="opinion-block">
            <div class="opinion-header">
              <h3>Opinion & Analysis</h3>
              <a href="/category/opinion">View All &rarr;</a>
            </div>
            <div class="opinion-grid">
              {displayOpinion.map((post, index) => (
                <a href={`/posts/${post.slug}`} class={`opinion-card op-${index}`}>
                  <span class="opinion-tag">Opinion</span>
                  <h4>{post.data.title}</h4>
                  <div class="author-row">
                    <div class="author-dot"></div>
                    <span>Jonathan Mwaniki</span>
                  </div>
                </a>
              ))}
            </div>
          </section>

          {/* SECTION C: CATEGORY GRIDS */}
          {majorCategories.slice(0, 3).map(category => {
             const catPosts = allPosts.filter(p => p.data.category === category).slice(0, 4);
             if (catPosts.length === 0) return null;
             return (
               <section class="category-section" key={category}>
                 <div class="section-header small">
                   <h2>{category}</h2>
                   <a href={`/category/${category.toLowerCase()}`}>More {category} &rarr;</a>
                 </div>
                 <div class="grid-4">
                   {catPosts.map(post => (
                     <a href={`/posts/${post.slug}`} class="grid-card">
                       <div class="grid-img"><img src={post.data.image} loading="lazy"/></div>
                       <h4>{post.data.title}</h4>
                     </a>
                   ))}
                 </div>
               </section>
             )
          })}
        </div>

        {/* RIGHT COLUMN: STICKY SIDEBAR */}
        <aside class="sidebar-column">
          <div class="sticky-wrapper">

            {/* Widget: Socials */}
            <div class="widget social-widget">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <a href="#" class="social-row" style={`--bg:${s.bg}`}>
                    <div class="social-icon">
                      <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-text">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                    <div class="social-arrow">&rarr;</div>
                  </a>
                ))}
              </div>
            </div>

            {/* Widget: Advertisement */}
            <div class="widget ad-widget">
               <span class="ad-label">Advertisement</span>
               <div class="ad-box">
                 <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9291176772735390" data-ad-slot="1358657931" data-ad-format="auto" data-full-width-responsive="true"></ins>
                 <script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
               </div>
            </div>

            {/* Widget: Newsletter / CTA */}
            <div class="widget cta-widget">
              <h3>The Mwaniki Report</h3>
              <p>Independent journalism. Straight to your inbox.</p>
              <form class="cta-form">
                <input type="email" placeholder="Email address" />
                <button>Subscribe</button>
              </form>
            </div>

          </div>
        </aside>

      </div>
    </main>
  </div>

  <style>
    /* --- 1. GLOBAL VARIABLES & RESET --- */
    :root {
      --bg: #ffffff;
      --text-main: #111111;
      --text-muted: #555555;
      --accent: #D93025; /* Classic News Red */
      --border: #e0e0e0;
      --serif: 'Playfair Display', serif;
      --sans: 'Inter', sans-serif;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #111111;
        --text-main: #f1f1f1;
        --text-muted: #aaaaaa;
        --border: #333333;
      }
    }

    * { box-sizing: border-box; }
    body { 
      background: var(--bg); color: var(--text-main); 
      font-family: var(--sans); margin: 0; 
      overflow-x: hidden; 
    }
    img { width: 100%; height: 100%; object-fit: cover; display: block; }
    a { text-decoration: none; color: inherit; transition: opacity 0.2s; }
    a:hover { opacity: 0.7; }

    .main-container { max-width: 1240px; margin: 0 auto; padding: 0 1rem; }
    @media (min-width: 768px) { .main-container { padding: 0 2rem; } }

    /* --- STORIES SECTION --- */
    .stories-section { margin: 1.5rem 0; }
    .stories-scroll { 
      display: flex; gap: 1.2rem; overflow-x: auto; 
      padding-bottom: 1rem; scrollbar-width: none; 
      border-bottom: 1px solid var(--border);
    }
    .stories-scroll::-webkit-scrollbar { display: none; }

    .story-item { flex: 0 0 auto; width: 70px; text-align: center; }
    .story-img-ring { 
      width: 70px; height: 70px; border-radius: 50%; padding: 3px; 
      border: 2px solid var(--accent); margin-bottom: 0.5rem; 
    }
    .story-img-ring img { border-radius: 50%; border: 2px solid var(--bg); }
    .story-label { font-size: 0.75rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: block; }

    /* --- HERO SECTION --- */
    .hero-wrapper { display: grid; gap: 1.5rem; margin-bottom: 3rem; }
    @media (min-width: 900px) { .hero-wrapper { grid-template-columns: 2fr 1fr; } }

    /* Main Hero */
    .hero-main { display: flex; flex-direction: column; }
    .hero-img-box { position: relative; width: 100%; aspect-ratio: 16/9; border-radius: 8px; overflow: hidden; }
    .hero-badge { 
      position: absolute; top: 1rem; left: 1rem; 
      background: var(--accent); color: white; 
      padding: 0.3rem 0.8rem; font-weight: 700; 
      font-size: 0.7rem; text-transform: uppercase; border-radius: 4px;
    }
    .hero-text-box { padding-top: 1rem; }
    .hero-main h1 { 
      font-family: var(--serif); font-size: 1.8rem; 
      margin: 0.5rem 0; line-height: 1.1; font-weight: 700; 
    }
    .hero-excerpt { font-size: 1rem; color: var(--text-muted); line-height: 1.5; margin: 0; }
    .meta-row { display: flex; align-items: center; gap: 0.5rem; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); text-transform: uppercase; }
    .cat-tag { color: var(--accent); }

    @media (min-width: 768px) { .hero-main h1 { font-size: 2.5rem; } }

    /* Side Heros */
    .hero-side { display: flex; flex-direction: column; gap: 1.5rem; border-top: 1px solid var(--border); padding-top: 1.5rem; }
    @media (min-width: 900px) { 
      .hero-side { border-top: none; border-left: 1px solid var(--border); padding-top: 0; padding-left: 1.5rem; } 
    }

    .sub-card { display: flex; gap: 1rem; align-items: flex-start; }
    .sub-img { width: 100px; height: 70px; border-radius: 4px; overflow: hidden; flex-shrink: 0; }
    .sub-text h3 { margin: 0; font-family: var(--serif); font-size: 1.1rem; line-height: 1.3; font-weight: 700; }
    .sub-cat { font-size: 0.7rem; color: var(--accent); font-weight: 700; text-transform: uppercase; margin-bottom: 0.2rem; display: block; }


    /* --- MAIN LAYOUT GRID --- */
    .layout-grid { display: grid; gap: 3rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 300px; } }

    /* HEADERS */
    .section-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem; }
    .section-header h2 { font-family: var(--serif); font-size: 1.5rem; margin: 0; white-space: nowrap; }
    .header-line { flex: 1; height: 1px; background: var(--text-main); opacity: 0.2; }
    .section-header.small { justify-content: space-between; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem; }
    .section-header.small a { font-size: 0.8rem; font-weight: 700; color: var(--accent); }

    /* NEWS RIVER */
    .news-river { display: flex; flex-direction: column; gap: 2rem; margin-bottom: 3rem; }
    .river-item { border-bottom: 1px solid var(--border); padding-bottom: 2rem; }
    .river-item:last-child { border: none; }

    .river-link { display: flex; flex-direction: column-reverse; gap: 1rem; }
    .river-content h3 { font-family: var(--serif); font-size: 1.4rem; margin: 0.5rem 0; line-height: 1.2; }
    .river-content p { color: var(--text-muted); font-size: 0.95rem; line-height: 1.5; margin: 0; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .river-meta { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--text-muted); display: flex; gap: 0.5rem; }
    .river-cat { color: var(--accent); }
    .river-img { width: 100%; height: 200px; border-radius: 6px; overflow: hidden; }

    @media (min-width: 768px) {
      .river-link { flex-direction: row; justify-content: space-between; align-items: flex-start; }
      .river-content { flex: 1; }
      .river-img { width: 240px; height: 160px; flex-shrink: 0; }
    }

    /* OPINION BLOCK */
    .opinion-block { background: #1a1a1a; color: white; padding: 2rem; border-radius: 8px; margin-bottom: 3rem; }
    .opinion-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.2); padding-bottom: 1rem; }
    .opinion-header h3 { font-family: var(--serif); margin: 0; font-size: 1.5rem; }
    .opinion-header a { color: var(--accent); font-size: 0.8rem; font-weight: 700; text-transform: uppercase; }

    .opinion-grid { display: grid; gap: 1.5rem; }
    @media (min-width: 600px) { .opinion-grid { grid-template-columns: 1fr 1fr 1fr; } }

    .opinion-card { display: flex; flex-direction: column; height: 100%; justify-content: space-between; }
    .opinion-tag { color: var(--accent); font-size: 0.7rem; font-weight: 700; text-transform: uppercase; margin-bottom: 0.5rem; display: block; }
    .opinion-card h4 { font-family: var(--serif); font-size: 1.2rem; margin: 0 0 1rem 0; line-height: 1.3; color: white; }
    .author-row { display: flex; align-items: center; gap: 0.5rem; font-size: 0.75rem; color: #aaa; }
    .author-dot { width: 8px; height: 8px; background: var(--accent); border-radius: 50%; }

    /* CATEGORY GRIDS */
    .category-section { margin-bottom: 3rem; }
    .grid-4 { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
    .grid-card { display: flex; flex-direction: column; gap: 0.8rem; }
    .grid-img { height: 120px; border-radius: 4px; overflow: hidden; }
    .grid-card h4 { font-family: var(--serif); font-size: 1rem; margin: 0; line-height: 1.3; }

    /* --- SIDEBAR --- */
    .sidebar-column { display: none; } /* Hidden on mobile */
    @media (min-width: 1024px) { 
      .sidebar-column { display: block; } 
      .sticky-wrapper { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; }
    }

    .widget-title { font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 1rem; border-bottom: 2px solid var(--black); padding-bottom: 0.5rem; }

    .social-list { display: flex; flex-direction: column; gap: 0.8rem; }
    .social-row { 
      display: flex; align-items: center; gap: 1rem; 
      background: #f8f9fa; padding: 0.8rem; border-radius: 6px; 
      border: 1px solid var(--border); transition: transform 0.2s;
    }
    .social-row:hover { transform: translateX(5px); border-color: #ccc; }
    .social-icon { width: 32px; height: 32px; color: white; background: var(--bg); border-radius: 50%; padding: 6px; }
    .social-text { flex: 1; display: flex; flex-direction: column; line-height: 1.1; }
    .social-text .count { font-weight: 800; font-size: 0.9rem; }
    .social-text .label { font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; }
    .social-arrow { font-size: 1.2rem; color: var(--border); }

    .ad-widget { text-align: center; }
    .ad-label { font-size: 0.65rem; color: #999; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px; display: block; }
    .ad-box { background: #f4f4f4; min-height: 250px; display: flex; align-items: center; justify-content: center; }

    .cta-widget { background: var(--text-main); color: white; padding: 2rem; border-radius: 8px; text-align: center; }
    .cta-widget h3 { font-family: var(--serif); margin: 0 0 0.5rem 0; }
    .cta-widget p { font-size: 0.9rem; color: #ccc; margin-bottom: 1.5rem; }
    .cta-form { display: flex; flex-direction: column; gap: 0.5rem; }
    .cta-form input { padding: 0.8rem; border: none; border-radius: 4px; }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.8rem; font-weight: 700; border-radius: 4px; cursor: pointer; text-transform: uppercase; font-size: 0.8rem; }
  </style>
</Layout>