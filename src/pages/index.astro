---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

if (allPosts.length === 0) {
  throw new Error("No posts found!");
}

// Separate Hero Section from the rest of the feed
const mainStory = allPosts[0];
const subStories = allPosts.slice(1, 3);
// The feed starts from post index 3
const feedPosts = allPosts.slice(3);

// Serialized data for the JS feed (starting from post 4)
const serializedFeed = feedPosts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  image: post.data.image,
  slug: post.slug,
  author: post.data.author || 'Jonathan Mwaniki'
}));

const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="The Mwaniki Report" description="Latest breaking news, politics, and analysis from Kenya.">

  <div class="page-wrapper">
    <main class="main-container">

      {/* --- 1. HERO SECTION (STAY STATIC) --- */}
      <section class="hero-wrapper">
        <div class="hero-main card-box">
          <a href={`/posts/${mainStory.slug}`} class="hero-link">
            <div class="hero-img-box">
              <img src={mainStory.data.image} alt={mainStory.data.title} loading="eager" />
              <span class="hero-badge">Top Story</span>
            </div>
            <div class="hero-text-box">
              <div class="meta-row">
                  <span class="cat-tag">{mainStory.data.category}</span>
                  <span class="bullet">â€¢</span>
                  <span class="date">{new Date(mainStory.data.date).toLocaleDateString()}</span>
              </div>
              <h1>{mainStory.data.title}</h1>
              <p class="hero-excerpt">{mainStory.data.description}</p>
            </div>
          </a>
        </div>

        <div class="hero-side">
          {subStories.map(post => (
            <a href={`/posts/${post.slug}`} class="sub-card card-box">
              <div class="sub-img">
                <img src={post.data.image} alt={post.data.title} loading="eager" />
              </div>
              <div class="sub-text">
                <span class="sub-cat">{post.data.category}</span>
                <h3>{post.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </section>

      {/* --- 2. FEED CONTROLS --- */}
      <div class="feed-header-bar">
        <div class="section-title">
            <h2>The Latest</h2>
            <div class="title-line"></div>
        </div>
        <div class="toggle-container" id="feed-toggle">
            <button class="toggle-btn active" data-mode="time">Latest First</button>
            <button class="toggle-btn" data-mode="category">By Category</button>
        </div>
      </div>

      {/* --- 3. MAIN CONTENT LAYOUT --- */}
      <div class="layout-grid">
        <div class="feed-column">
          <div id="posts-container" class="news-river">
            {/* 30 posts injected here */}
          </div>

          <div class="pagination-trigger">
            <button id="load-more-btn" class="more-btn">
              <span>Unroll More Stories</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
            </button>
          </div>
        </div>

        {/* --- SIDEBAR --- */}
        <aside class="sidebar-column">
          <div class="sticky-wrapper">
            <div class="widget social-widget card-box">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <a href="#" class="social-row" style={`--bg:${s.bg}`}>
                    <div class="social-icon">
                      <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-text">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>

            <div class="widget cta-widget card-box">
              <h3>The Mwaniki Report</h3>
              <p>Independent journalism. Straight to your inbox.</p>
              <form class="cta-form">
                <input type="email" placeholder="Email address" required />
                <button type="submit">Subscribe</button>
              </form>
            </div>
          </div>
        </aside>
      </div>
    </main>
  </div>

  <script is:inline define:vars={{ serializedFeed }}>
    let currentMode = 'time';
    let visibleCount = 30; // 30 posts shown immediately
    const increment = 15;
    
    const container = document.getElementById('posts-container');
    const loadBtn = document.getElementById('load-more-btn');
    const btns = document.querySelectorAll('.toggle-btn');

    function renderFeed(append = false) {
      let posts = [...serializedFeed];
      
      if (currentMode === 'category') {
        posts.sort((a, b) => a.category.localeCompare(b.category));
      }

      const slice = posts.slice(append ? visibleCount - increment : 0, visibleCount);
      if (!append) container.innerHTML = '';

      slice.forEach(post => {
        const article = document.createElement('article');
        article.className = 'river-item card-box fade-in';
        article.innerHTML = `
          <a href="/posts/${post.slug}" class="river-link">
            <div class="river-content">
              <div class="river-meta">
                <span class="river-cat">${post.category}</span>
                <span class="river-time">${new Date(post.date).toLocaleDateString()}</span>
              </div>
              <h3>${post.title}</h3>
              <p>${post.description}</p>
            </div>
            <div class="river-img">
              <img src="${post.image}" alt="${post.title}" loading="lazy" />
            </div>
          </a>
        `;
        container.appendChild(article);
      });

      if (visibleCount >= posts.length) loadBtn.style.display = 'none';
      else loadBtn.style.display = 'flex';
    }

    btns.forEach(b => b.addEventListener('click', () => {
      btns.forEach(btn => btn.classList.remove('active'));
      b.classList.add('active');
      currentMode = b.dataset.mode;
      visibleCount = 30;
      renderFeed();
    }));

    loadBtn.addEventListener('click', () => {
      visibleCount += increment;
      renderFeed(true);
    });

    renderFeed();
  </script>

  <style>
    /* --- THEME RESTORATION --- */
    :root {
      --bg: #f8fafc;  
      --card: #ffffff;
      --text: #1e293b; 
      --muted: #64748b; 
      --accent: #dc2626; 
      --border: #e2e8f0; 
      --radius: 8px;
      --font-head: 'Inter', system-ui, sans-serif;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f172a; 
        --card: #1e293b; 
        --text: #f1f5f9; 
        --muted: #94a3b8; 
        --border: #334155;
      }
    }

    * { box-sizing: border-box; }
    body { background: var(--bg); color: var(--text); font-family: 'Merriweather', serif; margin: 0; }
    a { text-decoration: none; color: inherit; }
    img { width: 100%; height: 100%; object-fit: cover; display: block; }

    .main-container { max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; }

    /* CARD BOX - PREVENTING PLAIN TEXT LOOK */
    .card-box {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      overflow: hidden;
      transition: border-color 0.2s;
    }
    .card-box:hover { border-color: var(--accent); }

    /* --- HERO SECTION --- */
    .hero-wrapper { display: grid; gap: 1.5rem; margin-bottom: 3rem; }
    @media (min-width: 900px) { .hero-wrapper { grid-template-columns: 1.8fr 1fr; } }

    .hero-img-box { position: relative; aspect-ratio: 16/9; }
    .hero-badge { position: absolute; top: 1rem; left: 1rem; background: var(--accent); color: white; padding: 4px 10px; font-weight: 800; font-size: 0.7rem; text-transform: uppercase; border-radius: 4px; }
    .hero-text-box { padding: 2rem; }
    .hero-text-box h1 { font-family: var(--font-head); font-size: 2.5rem; margin: 0.5rem 0; line-height: 1.1; }
    .meta-row { display: flex; gap: 0.5rem; font-family: var(--font-head); font-size: 0.8rem; font-weight: 700; text-transform: uppercase; color: var(--muted); }
    .cat-tag { color: var(--accent); }

    .hero-side { display: flex; flex-direction: column; gap: 1rem; }
    .sub-card { display: flex; gap: 1rem; padding: 1rem; align-items: center; }
    .sub-img { width: 120px; height: 80px; flex-shrink: 0; border-radius: 4px; overflow: hidden; }
    .sub-text h3 { margin: 0; font-family: var(--font-head); font-size: 1.1rem; line-height: 1.3; }
    .sub-cat { font-family: var(--font-head); font-size: 0.7rem; color: var(--accent); font-weight: 800; text-transform: uppercase; }

    /* --- FEED CONTROLS --- */
    .feed-header-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem; }
    .section-title { display: flex; align-items: center; gap: 1rem; flex: 1; }
    .section-title h2 { font-family: var(--font-head); margin: 0; white-space: nowrap; }
    .title-line { height: 1px; background: var(--border); width: 100%; }

    .toggle-container { display: flex; background: var(--card); padding: 4px; border-radius: 50px; border: 1px solid var(--border); }
    .toggle-btn { border: none; background: transparent; padding: 0.5rem 1.2rem; border-radius: 50px; font-family: var(--font-head); font-weight: 700; font-size: 0.8rem; cursor: pointer; color: var(--muted); }
    .toggle-btn.active { background: var(--accent); color: white; }

    /* --- NEWS RIVER (DYNAMIC) --- */
    .layout-grid { display: grid; gap: 3rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 320px; } }

    .news-river { display: flex; flex-direction: column; gap: 1.5rem; }
    .river-item { padding: 1.5rem; }
    .river-link { display: flex; flex-direction: column-reverse; gap: 1.5rem; }
    @media (min-width: 768px) { .river-link { flex-direction: row; } }

    .river-content { flex: 1; }
    .river-content h3 { font-family: var(--font-head); font-size: 1.5rem; margin: 0.5rem 0; line-height: 1.3; }
    .river-content p { color: var(--muted); font-size: 1rem; line-height: 1.6; margin: 0; }
    .river-meta { display: flex; gap: 0.8rem; font-family: var(--font-head); font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--muted); }
    .river-cat { color: var(--accent); }
    .river-img { width: 100%; height: 200px; flex-shrink: 0; border-radius: 6px; overflow: hidden; }
    @media (min-width: 768px) { .river-img { width: 240px; height: 160px; } }

    /* --- SIDEBAR --- */
    .sidebar-column { display: none; }
    @media (min-width: 1024px) { .sidebar-column { display: block; } .sticky-wrapper { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; } }
    
    .widget { padding: 1.5rem; }
    .widget-title { font-family: var(--font-head); font-size: 0.9rem; text-transform: uppercase; border-bottom: 2px solid var(--border); padding-bottom: 0.5rem; margin-bottom: 1rem; }
    
    .social-row { display: flex; align-items: center; gap: 1rem; margin-bottom: 0.8rem; }
    .social-icon { width: 32px; height: 32px; color: white; background: var(--text); border-radius: 50%; padding: 6px; }
    .social-text { line-height: 1.1; font-family: var(--font-head); }
    .social-text .count { font-weight: 800; font-size: 0.9rem; }
    .social-text .label { font-size: 0.7rem; color: var(--muted); text-transform: uppercase; }

    .cta-widget { background: var(--text); color: white; text-align: center; }
    .cta-widget h3 { color: white; margin-bottom: 0.5rem; }
    .cta-form { display: flex; flex-direction: column; gap: 0.5rem; margin-top: 1rem; }
    .cta-form input { padding: 0.8rem; border-radius: 4px; border: none; }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.8rem; font-weight: 800; border-radius: 4px; cursor: pointer; text-transform: uppercase; }

    /* --- PAGINATION --- */
    .pagination-trigger { margin-top: 3rem; text-align: center; }
    .more-btn { background: var(--text); color: var(--bg); border: none; padding: 1.2rem 3rem; border-radius: 50px; font-family: var(--font-head); font-weight: 800; cursor: pointer; display: inline-flex; align-items: center; gap: 1rem; }
    
    .fade-in { animation: fadeIn 0.4s ease forwards; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
  </style>
</Layout>