import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft) // OPTIMIZATION: Hide drafts
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

// Safety Check: Stop build crash if 0 posts exist
if (allPosts.length === 0) {
  throw new Error("No posts found! Add at least one post to build the homepage.");
}

const majorCategories = ['Politics', 'Business', 'Sports', 'Lifestyle', 'Opinion'];

// 2. STORY CIRCLES
const categoryCircles = majorCategories.map(cat => {
  const latest = allPosts.find(p => p.data.category === cat);
  return { 
    type: 'category', 
    label: cat, 
    image: latest?.data.image, 
    link: `/category/${cat.toLowerCase()}` 
  };
});

const latestStoryCircles = allPosts.slice(0, 7).map(post => ({
  type: 'story', 
  label: post.data.category || 'News', 
  image: post.data.image, 
  link: `/posts/${post.slug}`
}));

const combinedCircles = [...categoryCircles, ...latestStoryCircles];

// 3. SECTIONS
const mainStory = allPosts[0];
const subStories = allPosts.slice(1, 3);
const trendingPosts = allPosts.slice(3, 9); 

// Smart Opinion Logic: Fallback to general news if no Opinions exist yet
const opinionPosts = allPosts.filter(p => p.data.category === 'Opinion').slice(0, 3);
const displayOpinion = opinionPosts.length > 0 ? opinionPosts : allPosts.slice(9, 12);

// Social Stats (Data)
const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="Breaking News Kenya | Jonathan Mwaniki" description="Latest breaking news, politics, and analysis from Kenya.">

  <div class="page-wrapper">

    {/* --- 1. STORIES BAR (Card Style) --- */}
    <section class="stories-section">
      <div class="main-container">
        <div class="stories-scroll">
          {combinedCircles.map(item => (
            <a href={item.link} class="story-item">
              <div class="story-img-ring">
                <img src={item.image || '/default-image.jpg'} alt={item.label} loading="eager" width="70" height="70" />
              </div>
              <span class="story-label">{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <main class="main-container">

      {/* --- 2. HERO SECTION --- */}
      {mainStory && (
        <section class="hero-wrapper">
          <div class="hero-main card-box">
            <a href={`/posts/${mainStory.slug}`} class="hero-link">
              <div class="hero-img-box">
                <img src={mainStory.data.image} alt={mainStory.data.title} loading="eager" />
                <span class="hero-badge">Top Story</span>
              </div>
              <div class="hero-text-box">
                <div class="meta-row">
                    <span class="cat-tag">{mainStory.data.category}</span>
                    <span class="bullet">â€¢</span>
                    <span class="date">{new Date(mainStory.data.date).toLocaleDateString()}</span>
                </div>
                <h1>{mainStory.data.title}</h1>
                <p class="hero-excerpt">{mainStory.data.description}</p>
              </div>
            </a>
          </div>

          <div class="hero-side">
            {subStories.map(post => (
              <a href={`/posts/${post.slug}`} class="sub-card card-box">
                <div class="sub-img">
                  <img src={post.data.image} alt={post.data.title} loading="eager" />
                </div>
                <div class="sub-text">
                  <span class="sub-cat">{post.data.category}</span>
                  <h3>{post.data.title}</h3>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      {/* --- 3. MAIN CONTENT LAYOUT --- */}
      <div class="layout-grid">

        {/* LEFT COLUMN: THE FEED */}
        <div class="feed-column">

          {/* SECTION A: LATEST NEWS RIVER */}
          <div class="section-header">
            <h2>The Latest</h2>
            <div class="header-line"></div>
          </div>

          <div class="news-river">
            {trendingPosts.map(post => (
              <article class="river-item card-box">
                <a href={`/posts/${post.slug}`} class="river-link">
                  <div class="river-content">
                    <div class="river-meta">
                      <span class="river-cat">{post.data.category}</span>
                      <span class="river-time">{new Date(post.data.date).toLocaleDateString()}</span>
                    </div>
                    <h3>{post.data.title}</h3>
                    <p>{post.data.description}</p>
                  </div>
                  <div class="river-img">
                    <img src={post.data.image} alt={post.data.title} loading="lazy" />
                  </div>
                </a>
              </article>
            ))}
          </div>

          {/* SECTION B: OPINION BLOCK (Dark Slate Theme) */}
          <section class="opinion-block">
            <div class="opinion-header">
              <h3>Opinion & Analysis</h3>
              <a href="/category/opinion">View All &rarr;</a>
            </div>
            <div class="opinion-grid">
              {displayOpinion.map((post) => (
                <a href={`/posts/${post.slug}`} class="opinion-card">
                  <span class="opinion-tag">Opinion</span>
                  <h4>{post.data.title}</h4>
                  <div class="author-row">
                    <div class="author-dot"></div>
                    {/* OPTIMIZATION: Use dynamic author if available */}
                    <span>{post.data.author || 'Jonathan Mwaniki'}</span>
                  </div>
                </a>
              ))}
            </div>
          </section>

          {/* SECTION C: CATEGORY GRIDS */}
          {majorCategories.slice(0, 3).map(category => {
              // OPTIMIZATION: Ensure we don't show the main story again in categories
              const catPosts = allPosts
                .filter(p => p.data.category === category && p.slug !== mainStory?.slug)
                .slice(0, 4);
              
              if (catPosts.length === 0) return null;
              
              return (
                <section class="category-section" key={category}>
                  <div class="section-header small">
                    <h2>{category}</h2>
                    <a href={`/category/${category.toLowerCase()}`}>More {category} &rarr;</a>
                  </div>
                  <div class="grid-4">
                    {catPosts.map(post => (
                      <a href={`/posts/${post.slug}`} class="grid-card card-box">
                        <div class="grid-img">
                            <img src={post.data.image} alt={post.data.title} loading="lazy"/>
                        </div>
                        <h4>{post.data.title}</h4>
                      </a>
                    ))}
                  </div>
                </section>
              )
          })}
        </div>

        {/* RIGHT COLUMN: STICKY SIDEBAR */}
        <aside class="sidebar-column">
          <div class="sticky-wrapper">

            {/* Widget: Socials */}
            <div class="widget social-widget card-box">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <a href="#" class="social-row" style={`--bg:${s.bg}`}>
                    <div class="social-icon">
                      <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-text">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                    <div class="social-arrow">&rarr;</div>
                  </a>
                ))}
              </div>
            </div>

            {/* Widget: Advertisement */}
            <div class="widget ad-widget card-box">
               <span class="ad-label">Advertisement</span>
               <div class="ad-box">
                 <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9291176772735390" data-ad-slot="1358657931" data-ad-format="auto" data-full-width-responsive="true"></ins>
                 <script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
               </div>
            </div>

            {/* Widget: Newsletter / CTA */}
            <div class="widget cta-widget">
              <h3>The Mwaniki Report</h3>
              <p>Independent journalism. Straight to your inbox.</p>
              <form class="cta-form" onsubmit="event.preventDefault(); alert('Subscribed!');">
                <input type="email" placeholder="Email address" required />
                <button type="submit">Subscribe</button>
              </form>
            </div>

          </div>
        </aside>

      </div>
    </main>
  </div>

  <style>
    /* --- 1. GLOBAL VARIABLES --- */
    :root {
      --bg: #f8fafc;  
      --card: #ffffff;
      --text: #1e293b; 
      --muted: #64748b; 
      --accent: #dc2626; 
      --border: #e2e8f0; 

      --font-body: 'Merriweather', Georgia, serif;
      --font-head: 'Inter', system-ui, sans-serif;

      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --radius: 8px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f172a; 
        --card: #1e293b; 
        --text: #f1f5f9; 
        --muted: #94a3b8; 
        --border: #334155;
      }
    }

    * { box-sizing: border-box; }
    body { 
      background: var(--bg); color: var(--text); 
      font-family: var(--font-body); margin: 0; 
      overflow-x: hidden; 
    }
    img { width: 100%; height: 100%; object-fit: cover; display: block; }
    a { text-decoration: none; color: inherit; transition: all 0.2s ease; }
    
    /* Typography Resets */
    h1, h2, h3, h4 { font-family: var(--font-head); font-weight: 800; letter-spacing: -0.02em; color: var(--text); }
    p { color: var(--muted); line-height: 1.6; }

    .main-container { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
    @media (min-width: 768px) { .main-container { padding: 0 1.5rem; } }

    /* HELPER: Card Box Style */
    .card-box {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card-box:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        border-color: var(--accent);
    }

    /* --- STORIES SECTION --- */
    .stories-section { margin-bottom: 2rem; background: var(--card); border-bottom: 1px solid var(--border); padding: 0.8rem 0; }
    .stories-scroll { 
      display: flex; gap: 1rem; overflow-x: auto; 
      padding-bottom: 5px; scrollbar-width: none; 
    }
    .stories-scroll::-webkit-scrollbar { display: none; }

    .story-item { flex: 0 0 auto; width: 70px; text-align: center; }
    .story-img-ring { 
      width: 70px; height: 70px; border-radius: 50%; padding: 3px; 
      border: 2px solid var(--accent); margin-bottom: 0.5rem; 
    }
    .story-img-ring img { border-radius: 50%; border: 2px solid var(--card); }
    .story-label { font-family: var(--font-head); font-size: 0.7rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: block; color: var(--text); }

    /* --- HERO SECTION --- */
    .hero-wrapper { display: grid; gap: 2rem; margin-bottom: 3rem; }
    @media (min-width: 900px) { .hero-wrapper { grid-template-columns: 2fr 1fr; } }

    /* Main Hero */
    .hero-main { display: flex; flex-direction: column; height: 100%; border: none; background: transparent; }
    .hero-main.card-box { padding: 0; background: var(--card); border: 1px solid var(--border); }
    
    .hero-link { display: block; height: 100%; }
    .hero-img-box { position: relative; width: 100%; aspect-ratio: 16/9; border-bottom: 1px solid var(--border); }
    .hero-badge { 
      position: absolute; top: 1rem; left: 1rem; 
      background: var(--accent); color: white; 
      padding: 0.3rem 0.8rem; font-weight: 700; font-family: var(--font-head);
      font-size: 0.7rem; text-transform: uppercase; border-radius: 4px;
    }
    .hero-text-box { padding: 1.5rem; }
    .hero-main h1 { font-size: 1.8rem; margin: 0.5rem 0; line-height: 1.2; }
    .hero-excerpt { font-size: 1.05rem; margin: 0; }
    .meta-row { display: flex; align-items: center; gap: 0.5rem; font-size: 0.8rem; font-weight: 700; color: var(--muted); text-transform: uppercase; font-family: var(--font-head); }
    .cat-tag { color: var(--accent); }

    @media (min-width: 768px) { .hero-main h1 { font-size: 2.5rem; } }

    /* Side Heros */
    .hero-side { display: flex; flex-direction: column; gap: 1rem; }
    
    .sub-card { display: flex; gap: 1rem; align-items: center; padding: 1rem; }
    .sub-img { width: 100px; height: 70px; border-radius: 6px; overflow: hidden; flex-shrink: 0; }
    .sub-text h3 { margin: 0; font-size: 1rem; line-height: 1.4; transition: color 0.2s; }
    .sub-cat { font-family: var(--font-head); font-size: 0.7rem; color: var(--accent); font-weight: 700; text-transform: uppercase; margin-bottom: 0.2rem; display: block; }

    /* --- MAIN LAYOUT --- */
    .layout-grid { display: grid; gap: 3rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 320px; } }

    /* HEADERS */
    .section-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem; }
    .section-header h2 { font-size: 1.5rem; margin: 0; white-space: nowrap; }
    .header-line { flex: 1; height: 1px; background: var(--border); }
    .section-header.small { justify-content: space-between; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem; }
    .section-header.small a { font-family: var(--font-head); font-size: 0.8rem; font-weight: 700; color: var(--accent); }

    /* NEWS RIVER */
    .news-river { display: flex; flex-direction: column; gap: 1.5rem; margin-bottom: 3rem; }
    .river-item { padding: 1.5rem; } 
    
    .river-link { display: flex; flex-direction: column-reverse; gap: 1rem; }
    .river-content h3 { font-size: 1.4rem; margin: 0.5rem 0; line-height: 1.3; }
    .river-content p { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; font-size: 0.95rem; }
    .river-meta { font-family: var(--font-head); font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--muted); display: flex; gap: 0.5rem; margin-bottom: 0.5rem; }
    .river-cat { color: var(--accent); }
    
    .river-img { width: 100%; height: 200px; border-radius: 6px; overflow: hidden; }

    @media (min-width: 768px) {
      .river-link { flex-direction: row; justify-content: space-between; align-items: flex-start; }
      .river-content { flex: 1; }
      .river-img { width: 220px; height: 150px; flex-shrink: 0; }
    }

    /* OPINION BLOCK */
    .opinion-block { 
        background: #1e293b; 
        color: white; padding: 2rem; border-radius: var(--radius); margin-bottom: 3rem; 
        box-shadow: var(--shadow-md);
    }
    .opinion-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 1rem; }
    .opinion-header h3 { margin: 0; font-size: 1.5rem; color: white; }
    .opinion-header a { color: var(--accent); font-family: var(--font-head); font-size: 0.8rem; font-weight: 700; text-transform: uppercase; }

    .opinion-grid { display: grid; gap: 1.5rem; }
    @media (min-width: 600px) { .opinion-grid { grid-template-columns: 1fr 1fr 1fr; } }

    .opinion-card { display: flex; flex-direction: column; height: 100%; justify-content: space-between; }
    .opinion-tag { color: var(--accent); font-family: var(--font-head); font-size: 0.7rem; font-weight: 700; text-transform: uppercase; margin-bottom: 0.5rem; display: block; }
    .opinion-card h4 { font-size: 1.1rem; margin: 0 0 1rem 0; line-height: 1.4; color: #f1f5f9; }
    .author-row { display: flex; align-items: center; gap: 0.5rem; font-size: 0.75rem; color: #94a3b8; font-family: var(--font-head); }
    .author-dot { width: 6px; height: 6px; background: var(--accent); border-radius: 50%; }

    /* CATEGORY GRIDS */
    .category-section { margin-bottom: 3rem; }
    .grid-4 { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
    .grid-card { padding: 1rem; display: flex; flex-direction: column; gap: 0.8rem; }
    .grid-img { height: 120px; border-radius: 4px; overflow: hidden; }
    .grid-card h4 { font-size: 1rem; margin: 0; line-height: 1.4; }

    /* --- SIDEBAR --- */
    .sidebar-column { display: none; }
    @media (min-width: 1024px) { 
      .sidebar-column { display: block; } 
      .sticky-wrapper { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; }
    }
    
    .widget { padding: 1.5rem; margin-bottom: 1rem; } 
    .widget-title { font-family: var(--font-head); font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem; border-bottom: 2px solid var(--border); padding-bottom: 0.5rem; color: var(--text); }

    .social-list { display: flex; flex-direction: column; gap: 0.8rem; }
    .social-row { 
      display: flex; align-items: center; gap: 1rem; 
      background: var(--bg); padding: 0.8rem; border-radius: 6px; 
      border: 1px solid var(--border); transition: transform 0.2s;
    }
    .social-row:hover { transform: translateX(5px); border-color: var(--muted); }
    .social-icon { width: 32px; height: 32px; color: white; background: var(--text); border-radius: 50%; padding: 6px; }
    .social-text { flex: 1; display: flex; flex-direction: column; line-height: 1.1; font-family: var(--font-head); }
    .social-text .count { font-weight: 800; font-size: 0.9rem; }
    .social-text .label { font-size: 0.7rem; color: var(--muted); text-transform: uppercase; }
    .social-arrow { font-size: 1.2rem; color: var(--border); }

    .ad-widget { text-align: center; }
    .ad-label { font-family: var(--font-head); font-size: 0.65rem; color: var(--muted); text-transform: uppercase; letter-spacing: 1px; margin-bottom: 8px; display: block; }
    .ad-box { background: var(--bg); min-height: 250px; display: flex; align-items: center; justify-content: center; border-radius: 4px; }

    .cta-widget { background: var(--text); color: white; text-align: center; border-radius: var(--radius); padding: 2rem; }
    .cta-widget h3 { margin: 0 0 0.5rem 0; color: white; }
    .cta-widget p { font-size: 0.9rem; color: var(--muted); margin-bottom: 1.5rem; }
    .cta-form { display: flex; flex-direction: column; gap: 0.5rem; }
    .cta-form input { padding: 0.8rem; border: none; border-radius: 4px; font-family: var(--font-head); }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.8rem; font-weight: 700; border-radius: 4px; cursor: pointer; text-transform: uppercase; font-size: 0.8rem; font-family: var(--font-head); }
  </style>
</Layout>