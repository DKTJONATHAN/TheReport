  </div>

  <script is:inline>
    // Fetch Data from your PHP Proxy
    fetch('/football_odds.php')
      .then(res => res.json())
      .then(data => {
        const widget = document.getElementById('betting-widget');
        const list = document.getElementById('bet-matches-list');
        
        // Only show if data exists and user hasn't closed it this session
        if(data.length > 0 && !sessionStorage.getItem('widgetClosed')) {
          widget.classList.remove('betting-widget-hidden');
          let html = '';
          
          data.forEach(match => {
            html += `
              <div class="bet-match-row">
                <div class="bet-teams">
                   <div class="bet-team">
                     <img src="${match.home_logo}" width="18" height="18" alt=""> 
                     <span>${match.home}</span>
                   </div>
                   <div class="bet-team">
                     <img src="${match.away_logo}" width="18" height="18" alt=""> 
                     <span>${match.away}</span>
                   </div>
                   <div class="bet-meta">${match.time} • ${match.league}</div>
                </div>
                <div class="bet-odds">
                   <div class="odd-box"><span>1</span><b>${match.odds.home}</b></div>
                   <div class="odd-box"><span>X</span><b>${match.odds.draw}</b></div>
                   <div class="odd-box"><span>2</span><b>${match.odds.away}</b></div>
                </div>
              </div>
            `;
          });
          list.innerHTML = html;
        }
      })
      .catch(err => {
        console.log('Widget error:', err);
        // Keep hidden on error
      });

    // Close Button Logic (Remembers close state per session)
    document.getElementById('close-bet-widget').addEventListener('click', () => {
      document.getElementById('betting-widget').classList.add('betting-widget-hidden');
      sessionStorage.setItem('widgetClosed', 'true');
    });
  </script>

