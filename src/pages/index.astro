import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

if (allPosts.length === 0) {
  throw new Error("No posts found!");
}

const majorCategories = ['Politics', 'Business', 'Sports', 'Lifestyle', 'Opinion'];

// STORIES BAR DATA
const categoryCircles = majorCategories.map(cat => {
  const latest = allPosts.find(p => p.data.category === cat);
  return { 
    type: 'category', 
    label: cat, 
    image: latest?.data.image, 
    link: `/category/${cat.toLowerCase()}` 
  };
});

const latestStoryCircles = allPosts.slice(0, 7).map(post => ({
  type: 'story', 
  label: post.data.category || 'News', 
  image: post.data.image, 
  link: `/posts/${post.slug}`
}));

const combinedCircles = [...categoryCircles, ...latestStoryCircles];

// HERO SECTION DATA
const mainStory = allPosts[0];
const subStories = allPosts.slice(1, 3);

// DYNAMIC FEED DATA (Starts from post 4)
const feedData = allPosts.slice(3).map(post => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  image: post.data.image,
  slug: post.slug,
  author: post.data.author || 'Jonathan Mwaniki'
}));

// Social Stats
const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="The Mwaniki Report" description="Latest breaking news and analysis from Kenya.">

  <div class="page-wrapper">

    {/* --- 1. STORIES BAR --- */}
    <section class="stories-section">
      <div class="main-container">
        <div class="stories-scroll">
          {combinedCircles.map(item => (
            <a href={item.link} class="story-item">
              <div class="story-img-ring">
                <img src={item.image || '/default-image.jpg'} alt={item.label} loading="eager" width="70" height="70" />
              </div>
              <span class="story-label">{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <main class="main-container">

      {/* --- 2. HERO SECTION --- */}
      <section class="hero-wrapper">
        <div class="hero-main card-box">
          <a href={`/posts/${mainStory.slug}`} class="hero-link">
            <div class="hero-img-box">
              <img src={mainStory.data.image} alt={mainStory.data.title} loading="eager" />
              <span class="hero-badge">Top Story</span>
            </div>
            <div class="hero-text-box">
              <div class="meta-row">
                  <span class="cat-tag">{mainStory.data.category}</span>
                  <span class="bullet">â€¢</span>
                  <span class="date">{new Date(mainStory.data.date).toLocaleDateString()}</span>
              </div>
              <h1 class="hero-title">{mainStory.data.title}</h1>
              <p class="hero-excerpt">{mainStory.data.description}</p>
            </div>
          </a>
        </div>

        <div class="hero-side">
          {subStories.map(post => (
            <a href={`/posts/${post.slug}`} class="sub-card card-box">
              <div class="sub-img">
                <img src={post.data.image} alt={post.data.title} loading="eager" />
              </div>
              <div class="sub-text">
                <span class="sub-cat">{post.data.category}</span>
                <h3 class="sub-title">{post.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </section>

      {/* --- 3. FEED HEADER --- */}
      <div class="feed-header-bar">
        <div class="section-title-box">
            <h2 class="section-title">The Latest News</h2>
            <div class="header-line"></div>
        </div>
        <div class="toggle-container" id="feed-toggle">
            <button class="toggle-btn active" data-mode="time">Latest First</button>
            <button class="toggle-btn" data-mode="category">By Category</button>
        </div>
      </div>

      {/* --- 4. DYNAMIC FEED LAYOUT --- */}
      <div class="layout-grid">
        <div class="feed-column">
          <div id="posts-container" class="news-river">
            {/* 30 Cards will be injected here */}
          </div>

          <div class="pagination-footer">
            <button id="load-more-btn" class="more-btn">
              <span>Unroll More Stories</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
            </button>
          </div>
        </div>

        <aside class="sidebar-column">
          <div class="sticky-wrapper">
            <div class="widget social-widget card-box">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <div class="social-row">
                    <div class="social-icon" style={`background:${s.bg}`}>
                      <svg viewBox="0 0 24 24" fill="white"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-text">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <div class="widget cta-widget card-box">
              <h3 class="cta-title">The Mwaniki Report</h3>
              <p>Independent journalism straight to your inbox.</p>
              <form class="cta-form">
                <input type="email" placeholder="Email address" required />
                <button type="submit">Subscribe</button>
              </form>
            </div>
          </div>
        </aside>
      </div>

    </main>
  </div>

  <script is:inline define:vars={{ feedData }}>
    let currentMode = 'time';
    let visibleCount = 30;
    const step = 15;
    
    const container = document.getElementById('posts-container');
    const loadBtn = document.getElementById('load-more-btn');
    const toggleBtns = document.querySelectorAll('.toggle-btn');

    function renderFeed(isAppend = false) {
      let posts = [...feedData];
      
      if (currentMode === 'category') {
        posts.sort((a, b) => a.category.localeCompare(b.category));
      }

      const slice = posts.slice(isAppend ? visibleCount - step : 0, visibleCount);
      if (!isAppend) container.innerHTML = '';

      slice.forEach(post => {
        // Create the card container manually to ensure CSS classes apply
        const article = document.createElement('article');
        article.className = 'river-item card-box fade-in';
        
        article.innerHTML = `
          <a href="/posts/${post.slug}" class="river-link">
            <div class="river-content">
              <div class="river-meta">
                <span class="river-cat">${post.category}</span>
                <span class="river-time">${new Date(post.date).toLocaleDateString()}</span>
              </div>
              <h3 class="river-title">${post.title}</h3>
              <p class="river-desc">${post.description}</p>
            </div>
            <div class="river-img">
              <img src="${post.image}" alt="${post.title}" loading="lazy" />
            </div>
          </a>
        `;
        container.appendChild(article);
      });

      if (visibleCount >= posts.length) loadBtn.style.display = 'none';
      else loadBtn.style.display = 'flex';
    }

    toggleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        toggleBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentMode = btn.dataset.mode;
        visibleCount = 30;
        renderFeed();
      });
    });

    loadBtn.addEventListener('click', () => {
      visibleCount += step;
      renderFeed(true);
    });

    renderFeed();
  </script>

  <style>
    /* --- 1. CORE VARIABLES (Your exact dark theme) --- */
    :root {
      --bg: #0f172a; 
      --card: #1e293b; 
      --text: #f1f5f9; 
      --muted: #94a3b8; 
      --accent: #dc2626; 
      --border: #334155;
      --font-body: 'Merriweather', Georgia, serif;
      --font-head: 'Inter', system-ui, sans-serif;
      --radius: 8px;
    }

    * { box-sizing: border-box; }
    body { background: var(--bg); color: var(--text); font-family: var(--font-body); margin: 0; }
    img { width: 100%; height: 100%; object-fit: cover; display: block; }
    
    /* NUCLEAR LINK RESET: Stops blue/purple text dead */
    a, a:visited, a:active, a:hover {
      text-decoration: none !important;
      color: inherit !important;
    }

    .main-container { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }

    /* CARD BOX - REAL CONTAINERS */
    .card-box {
        background: var(--card) !important;
        border: 1px solid var(--border) !important;
        border-radius: var(--radius);
        overflow: hidden;
        display: block;
        transition: border-color 0.2s;
    }
    .card-box:hover { border-color: var(--accent) !important; }

    /* --- STORIES BAR --- */
    .stories-section { margin-bottom: 2rem; background: var(--card); border-bottom: 1px solid var(--border); padding: 1.2rem 0; }
    .stories-scroll { display: flex; gap: 1rem; overflow-x: auto; scrollbar-width: none; padding: 0 1rem; }
    .stories-scroll::-webkit-scrollbar { display: none; }
    .story-item { flex: 0 0 auto; width: 75px; text-align: center; display: block; }
    .story-img-ring { width: 70px; height: 70px; border-radius: 50%; padding: 3px; border: 2px solid var(--accent); margin: 0 auto 0.5rem; }
    .story-img-ring img { border-radius: 50%; border: 2px solid var(--card); }
    .story-label { font-family: var(--font-head); font-size: 0.7rem; font-weight: 700; color: var(--text); text-transform: uppercase; display: block; }

    /* --- HERO SECTION --- */
    .hero-wrapper { display: grid; gap: 1.5rem; margin-bottom: 3.5rem; }
    @media (min-width: 900px) { .hero-wrapper { grid-template-columns: 2fr 1fr; } }

    .hero-main { display: flex; flex-direction: column; }
    .hero-img-box { position: relative; aspect-ratio: 16/9; }
    .hero-badge { position: absolute; top: 1rem; left: 1rem; background: var(--accent); color: white; padding: 5px 12px; font-weight: 800; font-size: 0.75rem; border-radius: 4px; text-transform: uppercase; }
    .hero-text-box { padding: 1.5rem; }
    .hero-title { font-family: var(--font-head); font-size: 2.5rem; margin: 0.5rem 0; line-height: 1.1; color: var(--text) !important; }
    .hero-excerpt { color: var(--muted); font-size: 1.1rem; line-height: 1.5; margin: 0; }
    
    .meta-row { display: flex; gap: 0.5rem; font-family: var(--font-head); font-size: 0.8rem; font-weight: 700; color: var(--muted); text-transform: uppercase; }
    .cat-tag { color: var(--accent) !important; }

    .hero-side { display: flex; flex-direction: column; gap: 1rem; }
    .sub-card { display: flex; gap: 1rem; padding: 1rem; align-items: center; }
    .sub-img { width: 110px; height: 75px; border-radius: 4px; flex-shrink: 0; overflow: hidden; }
    .sub-title { margin: 0; font-family: var(--font-head); font-size: 1.05rem; line-height: 1.3; color: var(--text) !important; }
    .sub-cat { font-family: var(--font-head); font-size: 0.7rem; color: var(--accent) !important; font-weight: 800; text-transform: uppercase; }

    /* --- FEED HEADER --- */
    .feed-header-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2.5rem; flex-wrap: wrap; gap: 1.5rem; }
    .section-title-box { display: flex; align-items: center; gap: 1rem; flex: 1; }
    .section-title { font-family: var(--font-head); font-size: 1.8rem; margin: 0; white-space: nowrap; color: var(--text); }
    .header-line { height: 1px; background: var(--border); width: 100%; }

    .toggle-container { display: flex; background: var(--card); padding: 4px; border-radius: 50px; border: 1px solid var(--border); }
    .toggle-btn { border: none; background: transparent; padding: 0.6rem 1.4rem; border-radius: 50px; font-family: var(--font-head); font-weight: 700; font-size: 0.85rem; cursor: pointer; color: var(--muted); transition: 0.2s; }
    .toggle-btn.active { background: var(--accent) !important; color: white !important; }

    /* --- NEWS RIVER CARDS --- */
    .layout-grid { display: grid; gap: 3rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 320px; } }

    .news-river { display: flex; flex-direction: column; gap: 1.5rem; }
    .river-item { padding: 1.5rem; display: block; }
    .river-link { display: flex; flex-direction: column-reverse; gap: 1.5rem; }
    @media (min-width: 768px) { .river-link { flex-direction: row; } }

    .river-content { flex: 1; }
    .river-title { font-family: var(--font-head); font-size: 1.6rem; margin: 0.5rem 0; line-height: 1.2; color: var(--text) !important; }
    .river-desc { color: var(--muted) !important; font-size: 1rem; line-height: 1.6; margin: 0; }
    .river-meta { display: flex; gap: 0.8rem; font-family: var(--font-head); font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--muted); }
    .river-img { width: 100%; height: 200px; border-radius: 6px; flex-shrink: 0; overflow: hidden; }
    @media (min-width: 768px) { .river-img { width: 260px; height: 170px; } }

    /* --- PAGINATION --- */
    .pagination-footer { margin-top: 4rem; text-align: center; }
    .more-btn { background: var(--accent); color: white !important; border: none; padding: 1.2rem 3.5rem; border-radius: 50px; font-family: var(--font-head); font-weight: 800; cursor: pointer; display: inline-flex; align-items: center; gap: 1rem; transition: transform 0.2s; }
    .more-btn:hover { transform: scale(1.03); }

    /* --- SIDEBAR --- */
    .sidebar-column { display: none; }
    @media (min-width: 1024px) { .sidebar-column { display: block; } .sticky-wrapper { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; } }
    .widget { padding: 1.5rem; }
    .widget-title { font-family: var(--font-head); font-size: 0.9rem; text-transform: uppercase; border-bottom: 2px solid var(--border); padding-bottom: 0.5rem; margin-bottom: 1.5rem; color: var(--text); }
    .social-row { display: flex; align-items: center; gap: 1rem; margin-bottom: 1.2rem; }
    .social-icon { width: 34px; height: 34px; border-radius: 50%; display: flex; align-items: center; justify-content: center; padding: 7px; }
    .social-text { line-height: 1.1; font-family: var(--font-head); }
    .social-text .count { font-weight: 800; font-size: 0.95rem; color: var(--text); display: block; }
    .social-text .label { font-size: 0.7rem; color: var(--muted); text-transform: uppercase; }

    .cta-widget { background: var(--card); text-align: center; border: 2px solid var(--accent) !important; }
    .cta-title { color: var(--text) !important; margin-bottom: 0.5rem; }
    .cta-form { display: flex; flex-direction: column; gap: 0.6rem; margin-top: 1rem; }
    .cta-form input { padding: 0.8rem; border-radius: 4px; border: 1px solid var(--border); background: var(--bg); color: var(--text); }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.8rem; font-weight: 800; border-radius: 4px; cursor: pointer; text-transform: uppercase; }

    /* ANIMATION */
    .fade-in { animation: fadeIn 0.5s ease forwards; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(15px); } to { opacity: 1; transform: translateY(0); } }
  </style>
</Layout>