---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

// Preparation for client-side consumption
const serializedPosts = allPosts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  image: post.data.image,
  slug: post.slug,
  author: post.data.author || 'Jonathan Mwaniki'
}));

const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
];
---

<Layout title="The Mwaniki Report" description="Latest breaking news, politics, and analysis.">

  <div class="page-wrapper">
    <main class="main-container">

      {/* --- FEED CONTROLS --- */}
      <section class="feed-controls">
        <div class="toggle-container" id="feed-toggle">
          <button class="toggle-btn active" data-mode="time">Latest First</button>
          <button class="toggle-btn" data-mode="category">By Category</button>
        </div>
      </section>

      <div class="layout-grid">

        {/* --- DYNAMIC FEED COLUMN --- */}
        <div class="feed-column">
          <div id="posts-container" class="news-river">
            {/* Posts are injected here via script using your original card design */}
          </div>

          <div class="pagination-area">
            <button id="load-more-btn" class="more-btn">
              <span>More Stories</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
            </button>
            <p id="end-message" class="end-text hidden">You have reached the end of the feed.</p>
          </div>
        </div>

        {/* --- SIDEBAR --- */}
        <aside class="sidebar-column">
          <div class="sticky-wrapper">
            
            <div class="widget social-widget card-box">
              <h3 class="widget-title">Connect</h3>
              <div class="social-list">
                {socialStats.map(s => (
                  <a href="#" class="social-row" style={`--bg:${s.bg}`}>
                    <div class="social-icon">
                      <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                    </div>
                    <div class="social-text">
                      <span class="count">{s.count}</span>
                      <span class="label">{s.name}</span>
                    </div>
                    <div class="social-arrow">&rarr;</div>
                  </a>
                ))}
              </div>
            </div>

            <div class="widget ad-widget card-box">
               <span class="ad-label">Advertisement</span>
               <div class="ad-box">
                 <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9291176772735390" data-ad-slot="1358657931" data-ad-format="auto" data-full-width-responsive="true"></ins>
               </div>
            </div>

            <div class="widget cta-widget">
              <h3>The Mwaniki Report</h3>
              <p>Independent journalism. Straight to your inbox.</p>
              <form class="cta-form">
                <input type="email" placeholder="Email address" required />
                <button type="submit">Subscribe</button>
              </form>
            </div>
          </div>
        </aside>

      </div>
    </main>
  </div>

  {/* --- INTERACTION SCRIPT --- */}
  <script is:inline define:vars={{ serializedPosts }}>
    let currentMode = 'time';
    let visibleCount = 30; // Shows 30 posts by default
    const step = 15; // Loads 15 more on each click
    
    const container = document.getElementById('posts-container');
    const loadMoreBtn = document.getElementById('load-more-btn');
    const endMsg = document.getElementById('end-message');
    const toggleBtns = document.querySelectorAll('.toggle-btn');

    function getSortedPosts() {
      if (currentMode === 'time') {
        return [...serializedPosts]; 
      } else {
        return [...serializedPosts].sort((a, b) => a.category.localeCompare(b.category));
      }
    }

    function renderPosts(isAppend = false) {
      const allSorted = getSortedPosts();
      const slice = allSorted.slice(isAppend ? visibleCount - step : 0, visibleCount);

      if (!isAppend) container.innerHTML = '';

      slice.forEach(post => {
        const dateStr = new Date(post.date).toLocaleDateString();
        
        // Using your original river-item HTML structure
        const html = `
          <article class="river-item card-box entry-fade">
            <a href="/posts/${post.slug}" class="river-link">
              <div class="river-content">
                <div class="river-meta">
                  <span class="river-cat">${post.category}</span>
                  <span class="river-time">${dateStr}</span>
                </div>
                <h3>${post.title}</h3>
                <p>${post.description}</p>
              </div>
              <div class="river-img">
                <img src="${post.image}" alt="${post.title}" loading="lazy" />
              </div>
            </a>
          </article>
        `;
        container.insertAdjacentHTML('beforeend', html);
      });

      if (visibleCount >= allSorted.length) {
        loadMoreBtn.classList.add('hidden');
        endMsg.classList.remove('hidden');
      } else {
        loadMoreBtn.classList.remove('hidden');
        endMsg.classList.add('hidden');
      }
    }

    toggleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        toggleBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentMode = btn.dataset.mode;
        visibleCount = 30; 
        renderPosts();
      });
    });

    loadMoreBtn.addEventListener('click', () => {
      visibleCount += step;
      renderPosts(true);
    });

    // Initial render
    renderPosts();
  </script>

  <style>
    /* --- RESTORED ORIGINAL THEME COLORS --- */
    :root {
      --bg: #f8fafc;  
      --card: #ffffff;
      --text: #1e293b; 
      --muted: #64748b; 
      --accent: #dc2626; 
      --border: #e2e8f0; 

      --font-body: 'Merriweather', Georgia, serif;
      --font-head: 'Inter', system-ui, sans-serif;

      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --radius: 8px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f172a; 
        --card: #1e293b; 
        --text: #f1f5f9; 
        --muted: #94a3b8; 
        --border: #334155;
      }
    }

    /* --- CORE STYLES --- */
    * { box-sizing: border-box; }
    body { 
      background: var(--bg); color: var(--text); 
      font-family: var(--font-body); margin: 0; 
    }
    .main-container { max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; }
    .hidden { display: none !important; }

    .card-box {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card-box:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        border-color: var(--accent);
    }

    /* --- FEED CONTROLS --- */
    .feed-controls { margin-bottom: 2rem; display: flex; justify-content: flex-start; }
    .toggle-container { 
      display: flex; 
      background: var(--card); 
      padding: 4px; 
      border-radius: 50px; 
      border: 1px solid var(--border); 
    }
    .toggle-btn {
      border: none; background: transparent; padding: 0.5rem 1.2rem;
      border-radius: 50px; font-family: var(--font-head); font-weight: 700;
      font-size: 0.85rem; cursor: pointer; color: var(--muted); transition: 0.2s;
    }
    .toggle-btn.active { background: var(--accent); color: white; }

    /* --- RESTORED RIVER ITEM DESIGN --- */
    .news-river { display: flex; flex-direction: column; gap: 1.5rem; }
    .river-item { padding: 1.5rem; } 
    .river-link { display: flex; flex-direction: column-reverse; gap: 1rem; text-decoration: none; color: inherit; }
    
    .river-content h3 { font-family: var(--font-head); font-size: 1.4rem; margin: 0.5rem 0; line-height: 1.3; color: var(--text); }
    .river-content p { color: var(--muted); line-height: 1.6; font-size: 0.95rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .river-meta { font-family: var(--font-head); font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--muted); display: flex; gap: 0.5rem; margin-bottom: 0.5rem; }
    .river-cat { color: var(--accent); }
    
    .river-img { width: 100%; height: 200px; border-radius: 6px; overflow: hidden; }
    .river-img img { width: 100%; height: 100%; object-fit: cover; }

    @media (min-width: 768px) {
      .river-link { flex-direction: row; justify-content: space-between; align-items: flex-start; }
      .river-content { flex: 1; }
      .river-img { width: 220px; height: 150px; flex-shrink: 0; }
    }

    /* --- LAYOUT GRID --- */
    .layout-grid { display: grid; gap: 3rem; }
    @media (min-width: 1024px) { .layout-grid { grid-template-columns: 1fr 320px; } }

    /* --- PAGINATION --- */
    .pagination-area { margin-top: 3rem; text-align: center; }
    .more-btn {
      background: var(--text); color: var(--bg); border: none; padding: 1rem 2.5rem;
      border-radius: var(--radius); font-family: var(--font-head); font-weight: 800;
      cursor: pointer; display: inline-flex; align-items: center; gap: 0.8rem;
    }
    .end-text { font-family: var(--font-head); color: var(--muted); font-weight: 600; }

    /* --- SIDEBAR --- */
    .sidebar-column { display: none; }
    @media (min-width: 1024px) { 
      .sidebar-column { display: block; } 
      .sticky-wrapper { position: sticky; top: 2rem; display: flex; flex-direction: column; gap: 2rem; }
    }
    
    .widget { padding: 1.5rem; } 
    .widget-title { font-family: var(--font-head); font-size: 0.9rem; text-transform: uppercase; margin-bottom: 1rem; border-bottom: 2px solid var(--border); padding-bottom: 0.5rem; color: var(--text); }

    .social-list { display: flex; flex-direction: column; gap: 0.8rem; }
    .social-row { 
      display: flex; align-items: center; gap: 1rem; background: var(--bg); 
      padding: 0.8rem; border-radius: 6px; border: 1px solid var(--border); text-decoration: none; color: inherit;
    }
    .social-icon { width: 32px; height: 32px; color: white; background: var(--text); border-radius: 50%; padding: 6px; }
    .social-text { flex: 1; display: flex; flex-direction: column; line-height: 1.1; font-family: var(--font-head); }
    .social-text .count { font-weight: 800; font-size: 0.9rem; color: var(--text); }
    .social-text .label { font-size: 0.7rem; color: var(--muted); text-transform: uppercase; }

    .ad-label { font-family: var(--font-head); font-size: 0.65rem; color: var(--muted); text-transform: uppercase; margin-bottom: 8px; display: block; text-align: center; }
    .ad-box { background: var(--bg); min-height: 250px; border-radius: 4px; }

    .cta-widget { background: var(--text); color: white; text-align: center; border-radius: var(--radius); padding: 2rem; }
    .cta-widget h3 { margin: 0 0 0.5rem 0; color: white; font-family: var(--font-head); }
    .cta-widget p { font-size: 0.9rem; color: var(--muted); margin-bottom: 1.5rem; }
    .cta-form { display: flex; flex-direction: column; gap: 0.5rem; }
    .cta-form input { padding: 0.8rem; border: none; border-radius: 4px; }
    .cta-form button { background: var(--accent); color: white; border: none; padding: 0.8rem; font-weight: 700; border-radius: 4px; cursor: pointer; text-transform: uppercase; }

    /* --- ANIMATION --- */
    .entry-fade { animation: fadeIn 0.5s ease forwards; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
  </style>
</Layout>