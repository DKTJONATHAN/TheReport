---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. DATA LOGIC
const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const majorCategories = ['Politics', 'Business', 'Sports', 'Lifestyle', 'Opinion'];

// 2. STORY CIRCLES
const categoryCircles = majorCategories.map(cat => {
  const latest = allPosts.find(p => p.data.category === cat);
  return { type: 'category', label: cat, image: latest?.data.image, link: `/category/${cat.toLowerCase()}` };
});
const latestStoryCircles = allPosts.slice(0, 7).map(post => ({
  type: 'story', label: post.data.category || 'News', image: post.data.image, link: `/posts/${post.slug}`
}));
const combinedCircles = [...categoryCircles, ...latestStoryCircles];

// 3. SECTIONS
const mainStory = allPosts[0];
const subStories = allPosts.slice(1, 3);
const trendingPosts = allPosts.slice(3, 8);

const socialStats = [
  { name: 'Fans', count: '12k', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z', bg: '#1877f2' },
  { name: 'Followers', count: '45k', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z', bg: '#000000' },
  { name: 'Subs', count: '8k', icon: 'M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z', bg: '#c4302b' },
  { name: 'Likes', count: '22k', icon: 'M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069z', bg: '#e1306c' }
];
---

<Layout title="Breaking News Kenya | Jonathan Mwaniki" description="Latest breaking news from Kenya.">
  
  <div class="page-wrapper">
    
    {/* --- 1. COMPACT STORIES CAROUSEL --- */}
    <section class="stories-section">
      <div class="main-container">
        <div class="stories-scroll">
          {combinedCircles.map(item => (
            <a href={item.link} class="story-item">
              <div class="story-img-ring">
                <img src={item.image || '/default-image.jpg'} alt={item.label} loading="eager" />
              </div>
              <span class="story-label">{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <main class="main-container">
      
      {/* --- 2. HERO SECTION (Mobile Optimized) --- */}
      {mainStory && (
        <section class="hero-wrapper">
          <div class="hero-main">
            <a href={`/posts/${mainStory.slug}`} class="hero-link">
              <div class="hero-img-box">
                <img src={mainStory.data.image} alt={mainStory.data.title} loading="eager" />
              </div>
              <div class="hero-text-box">
                <div class="meta-row">
                   <span class="badge">Top Story</span>
                   <span class="date">{new Date(mainStory.data.date).toLocaleDateString()}</span>
                </div>
                <h1>{mainStory.data.title}</h1>
                <p class="hero-excerpt">{mainStory.data.description}</p>
              </div>
            </a>
          </div>

          <div class="hero-side">
            {subStories.map(post => (
              <a href={`/posts/${post.slug}`} class="sub-card">
                <div class="sub-img">
                  <img src={post.data.image} alt={post.data.title} loading="eager" />
                </div>
                <div class="sub-text">
                  <h3>{post.data.title}</h3>
                  <span class="sub-cat">{post.data.category}</span>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      {/* --- 3. MAIN CONTENT (Dense List) --- */}
      <div class="content-grid">
        <div class="feed-column">
          
          <section class="feed-block">
            <div class="block-head">
              <h2>Just In</h2>
              <span class="line"></span>
            </div>
            <div class="dense-list">
              {trendingPosts.map(post => (
                <a href={`/posts/${post.slug}`} class="dense-item">
                  <div class="dense-thumb">
                    <img src={post.data.image} alt={post.data.title} loading="lazy" />
                  </div>
                  <div class="dense-info">
                    <span class="dense-cat">{post.data.category}</span>
                    <h4>{post.data.title}</h4>
                    <span class="dense-time">{new Date(post.data.date).toLocaleDateString()}</span>
                  </div>
                </a>
              ))}
            </div>
          </section>

          {majorCategories.map(category => {
             const catPosts = allPosts.filter(p => p.data.category === category && p.slug !== mainStory?.slug).slice(0, 4);
             if (catPosts.length === 0) return null;
             return (
               <section class="feed-block" key={category}>
                 <div class="block-head">
                   <h2>{category}</h2>
                   <a href={`/category/${category.toLowerCase()}`} class="more-link">More</a>
                 </div>
                 <div class="compact-grid">
                   {catPosts.map(post => (
                     <a href={`/posts/${post.slug}`} class="compact-card">
                       <div class="compact-img"><img src={post.data.image} loading="lazy"/></div>
                       <h4>{post.data.title}</h4>
                     </a>
                   ))}
                 </div>
               </section>
             )
          })}
        </div>

        <aside class="sidebar-column">
          <div class="widget">
            <h3>Connect</h3>
            <div class="social-grid">
              {socialStats.map(s => (
                <a href="#" class="social-mini" style={`--bg:${s.bg}`}>
                  <svg viewBox="0 0 24 24" fill="currentColor"><path d={s.icon}/></svg>
                  <span>{s.count}</span>
                </a>
              ))}
            </div>
          </div>

          <div class="widget ad-container">
             <span class="ad-label">Advertisement</span>
             <div class="ad-scroll-safe">
               <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9291176772735390" data-ad-slot="1358657931" data-ad-format="auto" data-full-width-responsive="true"></ins>
               <script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
             </div>
          </div>
        </aside>
      </div>
    </main>
  </div>

  <style>
    /* 1. NUCLEAR RESET (Stops all overflow) */
    :root {
      --bg: #f8fafc; --card: #fff; --text: #1e293b; --muted: #64748b; --accent: #dc2626; --border: #e2e8f0;
      --font-ui: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
    @media (prefers-color-scheme: dark) {
      :root { --bg: #0f172a; --card: #1e293b; --text: #f1f5f9; --muted: #94a3b8; --border: #334155; }
    }

    * { box-sizing: border-box; min-width: 0; }
    html, body { margin: 0; padding: 0; width: 100%; overflow-x: hidden; background: var(--bg); color: var(--text); font-family: var(--font-ui); font-size: 15px; line-height: 1.4; }
    img { width: 100%; height: 100%; object-fit: cover; display: block; }
    a { text-decoration: none; color: inherit; display: block; }

    /* Container: Tighter padding for mobile */
    .page-wrapper { width: 100%; overflow: hidden; }
    .main-container { max-width: 1200px; margin: 0 auto; padding: 0 0.8rem; } /* Mobile Padding: 0.8rem */
    @media (min-width: 768px) { .main-container { padding: 0 1.5rem; } }

    /* --- STORIES (Smaller & Tighter) --- */
    .stories-section { background: var(--card); border-bottom: 1px solid var(--border); padding: 0.8rem 0; margin-bottom: 1.5rem; }
    .stories-scroll { display: flex; gap: 1rem; overflow-x: auto; padding: 0 0.8rem; scrollbar-width: none; }
    .stories-scroll::-webkit-scrollbar { display: none; }
    .story-item { flex: 0 0 auto; width: 64px; text-align: center; } /* Smaller width */
    .story-img-ring { width: 60px; height: 60px; border-radius: 50%; padding: 2px; border: 2px solid var(--accent); margin-bottom: 0.3rem; }
    .story-img-ring img { border-radius: 50%; border: 2px solid var(--card); }
    .story-label { font-size: 0.65rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: block; }

    /* --- HERO (Compact) --- */
    .hero-wrapper { display: grid; gap: 1.5rem; margin-bottom: 2rem; }
    @media (min-width: 768px) { .hero-wrapper { grid-template-columns: 1.8fr 1fr; } }

    /* Main Hero */
    .hero-main { background: var(--card); border-radius: 8px; overflow: hidden; border: 1px solid var(--border); }
    .hero-link { display: flex; flex-direction: column; }
    .hero-img-box { width: 100%; aspect-ratio: 16/9; } /* Enforce ratio */
    
    .hero-text-box { padding: 1rem; } /* Tighter padding */
    .meta-row { display: flex; align-items: center; gap: 0.6rem; margin-bottom: 0.6rem; font-size: 0.75rem; color: var(--muted); }
    .badge { background: var(--accent); color: white; padding: 0.15rem 0.5rem; border-radius: 4px; font-weight: 700; text-transform: uppercase; font-size: 0.65rem; }
    
    .hero-main h1 { 
        font-size: 1.25rem; /* Smaller H1 for Mobile */
        font-weight: 800; margin: 0 0 0.5rem 0; line-height: 1.25; 
    }
    .hero-excerpt { font-size: 0.9rem; color: var(--muted); margin: 0; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }

    @media (min-width: 768px) {
        .hero-link { flex-direction: row; align-items: stretch; min-height: 300px; }
        .hero-img-box { flex: 1.2; aspect-ratio: auto; }
        .hero-text-box { flex: 1; padding: 2rem; justify-content: center; display: flex; flex-direction: column; }
        .hero-main h1 { font-size: 2rem; }
    }

    /* Sub Stories */
    .hero-side { display: flex; flex-direction: column; gap: 1rem; }
    @media (min-width: 768px) { .hero-side { gap: 1rem; } }
    
    .sub-card { display: flex; gap: 0.8rem; background: var(--card); padding: 0.6rem; border-radius: 8px; border: 1px solid var(--border); align-items: center; }
    .sub-img { width: 80px; height: 60px; border-radius: 4px; overflow: hidden; flex-shrink: 0; }
    .sub-text h3 { font-size: 0.9rem; margin: 0 0 0.2rem 0; line-height: 1.3; font-weight: 600; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .sub-cat { font-size: 0.65rem; color: var(--accent); font-weight: 700; text-transform: uppercase; }

    /* --- FEED (Dense) --- */
    .content-grid { display: grid; gap: 2rem; }
    @media (min-width: 1024px) { .content-grid { grid-template-columns: 2.5fr 1fr; } }

    .block-head { display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem; border-bottom: 2px solid var(--border); padding-bottom: 0.5rem; }
    .block-head h2 { font-size: 1.1rem; margin: 0; text-transform: uppercase; font-weight: 800; border-left: 4px solid var(--accent); padding-left: 0.6rem; }
    .more-link { font-size: 0.75rem; font-weight: 700; color: var(--accent); text-transform: uppercase; }

    /* Trending Items */
    .dense-list { display: flex; flex-direction: column; gap: 1rem; }
    .dense-item { display: flex; gap: 0.8rem; align-items: flex-start; border-bottom: 1px solid var(--border); padding-bottom: 1rem; }
    .dense-item:last-child { border: none; }
    
    /* Smaller Thumbnails for Mobile */
    .dense-thumb { width: 90px; height: 65px; border-radius: 6px; overflow: hidden; flex-shrink: 0; } 
    .dense-info { flex: 1; }
    .dense-cat { font-size: 0.65rem; color: var(--accent); font-weight: 700; text-transform: uppercase; display: block; margin-bottom: 0.2rem; }
    
    /* Tighter Headlines */
    .dense-info h4 { font-size: 0.95rem; margin: 0 0 0.3rem 0; line-height: 1.3; font-weight: 600; }
    .dense-time { font-size: 0.7rem; color: var(--muted); }

    /* Category Grids */
    .compact-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 0.8rem; } /* 2-Col on Mobile */
    .compact-card { background: var(--card); border: 1px solid var(--border); border-radius: 6px; overflow: hidden; }
    .compact-img { height: 100px; overflow: hidden; } /* Shorter images */
    .compact-card h4 { font-size: 0.85rem; padding: 0.6rem; margin: 0; font-weight: 600; line-height: 1.3; }

    /* --- SIDEBAR & ADS --- */
    .sidebar-column { display: flex; flex-direction: column; gap: 1.5rem; }
    .widget { background: var(--card); border: 1px solid var(--border); border-radius: 8px; padding: 1rem; }
    .widget h3 { font-size: 0.9rem; text-transform: uppercase; margin: 0 0 0.8rem 0; border-bottom: 1px solid var(--border); padding-bottom: 0.4rem; }

    .social-grid { display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; gap: 0.5rem; }
    .social-mini { background: var(--bg); color: white; border-radius: 4px; padding: 0.5rem; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 0.2rem; }
    .social-mini svg { width: 16px; height: 16px; }
    .social-mini span { font-size: 0.7rem; font-weight: 700; }

    /* AD PROTECTION (The Fix) */
    .ad-container { text-align: center; }
    .ad-label { font-size: 0.6rem; color: var(--muted); text-transform: uppercase; display: block; margin-bottom: 0.4rem; }
    .ad-scroll-safe { 
        width: 100%; 
        overflow-x: auto; /* Allow internal scroll if ad is wide */
        overflow-y: hidden;
        display: flex; 
        justify-content: center;
        min-height: 100px;
        background: var(--bg);
    }
    .ad-scroll-safe::-webkit-scrollbar { display: none; } /* Hide scrollbar */

    /* Desktop Adjustments */
    @media (min-width: 1024px) {
        .compact-grid { grid-template-columns: 1fr 1fr; gap: 1.5rem; }
        .compact-img { height: 140px; }
        .compact-card h4 { font-size: 1rem; padding: 1rem; }
        .dense-thumb { width: 140px; height: 90px; }
        .dense-info h4 { font-size: 1.1rem; }
    }
  </style>
</Layout>