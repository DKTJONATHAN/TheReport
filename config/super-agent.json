  "content_strategy": {
    "publishing_frequency": {
      "articles_per_day": 4,
      "schedule_eat": ["08:00", "12:00", "16:00", "20:00"],
      "timezone_note": "All times in East Africa Time (EAT, UTC+3)"
    },
    "content_pillars": {
      "distribution_rules": {
        "high_cpm_focus_90_percent": [
          {
            "pillar": "tech",
            "weight": "22.5%",
            "keywords": ["AI", "crypto", "blockchain", "startups", "Silicon Valley", "tech trends", "cybersecurity", "software"],
            "geo_focus": "US, Canada, Europe",
            "avoid": ["overly technical jargon", "developer-only content"]
          },
          {
            "pillar": "finance",
            "weight": "22.5%",
            "keywords": ["stocks", "crypto markets", "inflation", "Fed policy", "recession", "investing", "wealth", "economy"],
            "geo_focus": "US, Canada, Europe",
            "avoid": ["financial advice", "investment recommendations"]
          },
          {
            "pillar": "international_politics",
            "weight": "22.5%",
            "keywords": ["US politics", "elections", "EU policy", "geopolitics", "Trump", "Biden", "global tensions", "sanctions"],
            "geo_focus": "US, Canada, Europe",
            "avoid": ["extreme partisan takes", "conspiracy theories"]
          },
          {
            "pillar": "kenyan_social_issues",
            "weight": "22.5%",
            "keywords": ["Gen Z Kenya", "digital culture", "social trends", "Nairobi life", "cost of living", "housing", "employment"],
            "geo_focus": "Kenya + diaspora",
            "angle": "global relevance (digital nomads, expats interested in Kenya)"
          }
        ],
        "kenya_local_10_percent": [
          {
            "pillar": "kenyan_politics",
            "weight": "5%",
            "keywords": ["Ruto", "Raila", "Parliament", "county government", "elections", "corruption scandals"],
            "frequency": "1-2x per week MAX",
            "trigger": "major breaking news only"
          },
          {
            "pillar": "kenyan_celeb_gossip",
            "weight": "5%",
            "keywords": ["Kenyan celebrities", "Nairobi gossip", "influencers", "scandals", "breakups", "beefs"],
            "frequency": "1-2x per week MAX",
            "trigger": "viral trending topics only"
          }
        ]
      }
    },
    "article_specifications": {
      "word_count": {
        "minimum": 1000,
        "maximum": 2000,
        "target": 1500,
        "ideal_range": "1500-1800",
        "note": "MOST articles should exceed 1500 words"
      },
      "seo_requirements": {
        "title": {
          "max_characters": 60,
          "pattern": "Keyword + Hook + Geographic/Global context",
          "examples": [
            "The Ozempic Wave Hits Nairobi: How Kenya's Elite Drop Weight",
            "Silicon Valley's AI Race: Why Google Just Lost $80 Billion",
            "Trump 2024: The Crypto Industry's Secret Weapon Exposed"
          ]
        },
        "description": {
          "source": "first_2_lines_of_article",
          "max_characters": 160,
          "fallback": "150 chars with primary keywords",
          "must_include": "main keyword + hook"
        },
        "tags": {
          "count": "4-6",
          "source": "pillars + article specific keywords",
          "format": "lowercase, no special chars except hyphens",
          "examples": ["ai trends", "crypto markets", "kenyan politics", "nairobi gossip"]
        },
        "category": {
          "source": "one_from_pillars",
          "options": ["tech", "finance", "international-politics", "kenyan-politics", "kenyan-celeb", "kenyan-social"]
        }
      }
    }
  },

